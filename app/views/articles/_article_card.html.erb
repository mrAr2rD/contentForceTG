<%# locals: (article:, featured: false) %>

<%= link_to article_path(article), class: "article-card block bg-[#111113] border border-[#27272A] rounded-2xl overflow-hidden" do %>
  <!-- Image -->
  <div class="aspect-video bg-[#1A1A1D] overflow-hidden">
    <% if article.cover_image.attached? %>
      <%= image_tag article.cover_image, class: "article-image w-full h-full object-cover transition-transform duration-500", alt: article.title %>
    <% else %>
      <div class="w-full h-full flex items-center justify-center">
        <svg class="w-12 h-12 text-[#27272A]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
        </svg>
      </div>
    <% end %>
  </div>

  <!-- Content -->
  <div class="p-5">
    <!-- Category & Reading Time -->
    <div class="flex items-center gap-3 mb-3">
      <% if article.category.present? %>
        <span class="px-2 py-0.5 bg-[#00D4AA]/10 text-[#00D4AA] text-xs font-medium rounded">
          <%= article.category.titleize %>
        </span>
      <% end %>
      <% if article.reading_time.present? %>
        <span class="text-xs text-[#71717A]">
          <%= article.reading_time %> мин чтения
        </span>
      <% end %>
    </div>

    <!-- Title -->
    <h3 class="font-semibold text-lg mb-2 line-clamp-2 group-hover:text-[#00D4AA] transition-colors">
      <%= article.title %>
    </h3>

    <!-- Excerpt -->
    <% if article.excerpt.present? %>
      <p class="text-sm text-[#A1A1AA] line-clamp-2 mb-4">
        <%= article.excerpt %>
      </p>
    <% end %>

    <!-- Footer -->
    <div class="flex items-center justify-between text-xs text-[#71717A]">
      <span>
        <%= article.published_at&.strftime("%d.%m.%Y") || article.created_at.strftime("%d.%m.%Y") %>
      </span>
      <span class="flex items-center gap-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
        </svg>
        <%= number_with_delimiter(article.views_count) %>
      </span>
    </div>
  </div>
<% end %>
