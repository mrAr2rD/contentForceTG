<div class="max-w-4xl mx-auto px-6 py-8">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-primary">Все публикации</h1>
    <span class="text-sm text-secondary"><%= @posts.total_count rescue @posts.size %> постов</span>
  </div>

  <% if @posts.any? %>
    <div id="posts-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mb-8">
      <% @posts.each do |post| %>
        <%= render 'channel_sites/post_card', post: post, featured: true %>
      <% end %>
    </div>

    <% if @posts.respond_to?(:next_page) && @posts.next_page %>
      <div id="infinite-scroll-sentinel"
           data-controller="infinite-scroll"
           data-infinite-scroll-url-value="<%= channel_site_posts_path(page: @posts.next_page, format: :turbo_stream) %>">
        <!-- Sentinel для отслеживания скролла -->
        <div data-infinite-scroll-target="sentinel" class="h-px"></div>

        <!-- Loading indicator -->
        <div data-infinite-scroll-target="loading" class="hidden py-8 flex justify-center">
          <div class="flex items-center gap-3 text-secondary">
            <svg class="animate-spin w-5 h-5" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            <span>Загрузка...</span>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="card p-12 text-center">
      <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-secondary flex items-center justify-center">
        <svg class="w-8 h-8 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
        </svg>
      </div>
      <p class="text-secondary">Публикации пока отсутствуют</p>
    </div>
  <% end %>
</div>
