<%# Добавляем новые посты в grid %>
<%= turbo_stream.append "posts-grid" do %>
  <% @posts.each do |post| %>
    <%= render 'channel_sites/post_card', post: post, featured: true %>
  <% end %>
<% end %>

<%# Обновляем infinite scroll controller с новым URL или удаляем если это последняя страница %>
<% if @posts.respond_to?(:next_page) && @posts.next_page %>
  <%= turbo_stream.update "infinite-scroll-sentinel" do %>
    <div data-controller="infinite-scroll"
         data-infinite-scroll-url-value="<%= channel_site_posts_path(page: @posts.next_page, format: :turbo_stream) %>">
      <div id="infinite-scroll-sentinel" data-infinite-scroll-target="sentinel" class="h-px"></div>
      <div data-infinite-scroll-target="loading" class="hidden py-8 flex justify-center">
        <div class="flex items-center gap-3 text-zinc-400">
          <svg class="animate-spin w-5 h-5" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
          <span>Загрузка...</span>
        </div>
      </div>
    </div>
  <% end %>
<% else %>
  <%= turbo_stream.remove "infinite-scroll-sentinel" %>
<% end %>
