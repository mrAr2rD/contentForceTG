<% error ||= nil %>

<%= form_with url: verify_code_telegram_session_path(telegram_session), method: :post, data: { turbo_frame: "_top" } do |f| %>
  <div class="space-y-5">
    <!-- Статус -->
    <div class="text-center pb-4 border-b border-zinc-200 dark:border-zinc-800">
      <div class="inline-flex items-center gap-2 px-3 py-1.5 bg-sky-50 dark:bg-sky-900/30 text-sky-700 dark:text-sky-300 rounded-full text-sm font-medium">
        <span class="w-2 h-2 rounded-full bg-sky-500 animate-pulse"></span>
        Код отправлен
      </div>
      <p class="mt-3 text-sm text-zinc-600 dark:text-zinc-400">
        Проверьте Telegram на устройстве <span class="font-mono font-medium text-zinc-900 dark:text-zinc-100"><%= telegram_session.masked_phone %></span>
      </p>
    </div>

    <% if error %>
      <div class="p-4 bg-red-50 dark:bg-red-950/30 border border-red-200 dark:border-red-900/50 rounded-xl">
        <div class="flex gap-3">
          <svg class="w-5 h-5 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <p class="text-sm text-red-600 dark:text-red-400"><%= error %></p>
        </div>
      </div>
    <% end %>

    <div>
      <label for="phone_code" class="block text-sm font-medium text-zinc-700 dark:text-zinc-300 mb-2">
        Код подтверждения
      </label>
      <input type="text"
             name="phone_code"
             id="phone_code"
             placeholder="12345"
             maxlength="6"
             pattern="[0-9]*"
             inputmode="numeric"
             class="w-full px-4 py-4 border border-zinc-300 dark:border-zinc-700 rounded-xl focus:ring-2 focus:ring-sky-500 focus:border-transparent dark:bg-zinc-800 dark:text-white text-center text-3xl font-mono tracking-[0.5em] transition-all"
             autofocus>
      <p class="mt-2 text-xs text-zinc-500 dark:text-zinc-400 text-center">
        Код действителен 5 минут
      </p>
    </div>

    <button type="submit"
            class="w-full py-3.5 px-4 bg-gradient-to-r from-sky-500 to-sky-600 text-white rounded-xl hover:from-sky-600 hover:to-sky-700 transition-all font-medium shadow-lg shadow-sky-500/25 hover:shadow-sky-500/40 hover:scale-[1.01] active:scale-[0.99]">
      Подтвердить
    </button>

    <div class="text-center pt-2">
      <%= link_to new_telegram_session_path, class: "inline-flex items-center gap-1 text-sm text-sky-600 hover:text-sky-700 dark:text-sky-400 dark:hover:text-sky-300 transition-colors" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
        </svg>
        Отправить код заново
      <% end %>
    </div>
  </div>
<% end %>
