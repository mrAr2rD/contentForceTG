<% error ||= nil %>

<%= form_with url: verify_2fa_telegram_session_path(telegram_session), method: :post do |f| %>
  <div class="space-y-5">
    <!-- Иконка 2FA -->
    <div class="text-center pb-4 border-b border-zinc-200 dark:border-zinc-800">
      <div class="w-14 h-14 mx-auto rounded-xl bg-gradient-to-br from-amber-400 to-amber-600 flex items-center justify-center shadow-lg shadow-amber-500/25 mb-4">
        <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
        </svg>
      </div>
      <p class="text-sm text-zinc-600 dark:text-zinc-400">
        Аккаунт защищён двухфакторной аутентификацией
      </p>
    </div>

    <% if error %>
      <div class="p-4 bg-red-50 dark:bg-red-950/30 border border-red-200 dark:border-red-900/50 rounded-xl">
        <div class="flex gap-3">
          <svg class="w-5 h-5 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <p class="text-sm text-red-600 dark:text-red-400"><%= error %></p>
        </div>
      </div>
    <% end %>

    <div>
      <label for="password" class="block text-sm font-medium text-zinc-700 dark:text-zinc-300 mb-2">
        Пароль 2FA
      </label>
      <div class="relative">
        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
          <svg class="w-5 h-5 text-zinc-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
          </svg>
        </div>
        <input type="password"
               name="password"
               id="password"
               class="w-full pl-12 pr-4 py-3.5 border border-zinc-300 dark:border-zinc-700 rounded-xl focus:ring-2 focus:ring-sky-500 focus:border-transparent dark:bg-zinc-800 dark:text-white transition-all"
               placeholder="Введите пароль"
               autofocus>
      </div>
    </div>

    <button type="submit"
            class="w-full py-3.5 px-4 bg-gradient-to-r from-sky-500 to-sky-600 text-white rounded-xl hover:from-sky-600 hover:to-sky-700 transition-all font-medium shadow-lg shadow-sky-500/25 hover:shadow-sky-500/40 hover:scale-[1.01] active:scale-[0.99]">
      Войти
    </button>
  </div>
<% end %>
