<div class="max-w-4xl mx-auto px-4 lg:px-6 py-8">
  <!-- Header с градиентным акцентом -->
  <div class="relative mb-8">
    <div class="absolute -inset-1 bg-gradient-to-r from-sky-500/20 via-primary-500/20 to-violet-500/20 rounded-2xl blur-xl opacity-50"></div>
    <div class="relative flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 p-6 bg-white dark:bg-zinc-900 rounded-xl border border-zinc-200 dark:border-zinc-800">
      <div>
        <div class="flex items-center gap-3 mb-2">
          <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-sky-400 to-sky-600 flex items-center justify-center shadow-lg shadow-sky-500/25">
            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm5.894 8.221l-1.97 9.28c-.145.658-.537.818-1.084.508l-3-2.21-1.446 1.394c-.14.18-.357.295-.6.295l.213-3.054 5.56-5.022c.242-.213-.054-.334-.373-.121L8.32 13.617l-2.96-.924c-.64-.203-.658-.64.135-.954l11.566-4.458c.538-.196 1.006.128.833.94z"/>
            </svg>
          </div>
          <h1 class="text-2xl font-bold text-zinc-900 dark:text-zinc-50">Telegram сессии</h1>
        </div>
        <p class="text-zinc-500 dark:text-zinc-400">Авторизованные аккаунты для импорта истории каналов</p>
      </div>
      <%= link_to new_telegram_session_path, class: "inline-flex items-center gap-2 px-5 py-2.5 bg-gradient-to-r from-sky-500 to-sky-600 text-white rounded-xl font-medium shadow-lg shadow-sky-500/25 hover:shadow-sky-500/40 hover:scale-[1.02] transition-all duration-200" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Добавить аккаунт
      <% end %>
    </div>
  </div>

  <!-- Список сессий -->
  <div class="bg-white dark:bg-zinc-900 rounded-xl border border-zinc-200 dark:border-zinc-800 overflow-hidden">
    <% if @telegram_sessions.any? %>
      <ul class="divide-y divide-zinc-100 dark:divide-zinc-800">
        <% @telegram_sessions.each_with_index do |session, index| %>
          <li class="group p-5 hover:bg-zinc-50 dark:hover:bg-zinc-800/50 transition-colors" style="animation: fadeInUp 0.4s ease-out <%= index * 0.05 %>s both;">
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-4">
                <!-- Статус индикатор -->
                <div class="relative">
                  <% if session.auth_auth_active? %>
                    <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-emerald-400 to-emerald-600 flex items-center justify-center shadow-lg shadow-emerald-500/25">
                      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                      </svg>
                    </div>
                    <div class="absolute -bottom-1 -right-1 w-4 h-4 bg-emerald-500 rounded-full border-2 border-white dark:border-zinc-900"></div>
                  <% elsif session.auth_pending_code? || session.auth_pending_2fa? %>
                    <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-amber-400 to-amber-600 flex items-center justify-center shadow-lg shadow-amber-500/25">
                      <svg class="w-6 h-6 text-white animate-pulse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                    </div>
                  <% else %>
                    <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-zinc-400 to-zinc-600 flex items-center justify-center">
                      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/>
                      </svg>
                    </div>
                  <% end %>
                </div>

                <!-- Информация -->
                <div>
                  <p class="text-base font-semibold text-zinc-900 dark:text-zinc-50 font-mono tracking-wide">
                    <%= session.masked_phone %>
                  </p>
                  <div class="flex items-center gap-2 mt-1">
                    <% if session.auth_auth_active? %>
                      <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded-full text-xs font-medium bg-emerald-100 text-emerald-700 dark:bg-emerald-900/30 dark:text-emerald-400">
                        <span class="w-1.5 h-1.5 rounded-full bg-emerald-500"></span>
                        Активна
                      </span>
                    <% elsif session.auth_pending_code? %>
                      <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded-full text-xs font-medium bg-amber-100 text-amber-700 dark:bg-amber-900/30 dark:text-amber-400">
                        Ожидает код
                      </span>
                    <% elsif session.auth_pending_2fa? %>
                      <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded-full text-xs font-medium bg-amber-100 text-amber-700 dark:bg-amber-900/30 dark:text-amber-400">
                        Ожидает 2FA
                      </span>
                    <% else %>
                      <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded-full text-xs font-medium bg-zinc-100 text-zinc-600 dark:bg-zinc-800 dark:text-zinc-400">
                        Истекла
                      </span>
                    <% end %>
                    <span class="text-xs text-zinc-400 dark:text-zinc-500">
                      <%= time_ago_in_words(session.created_at) %> назад
                    </span>
                  </div>
                </div>
              </div>

              <!-- Действия -->
              <div class="flex items-center gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                <%= button_to telegram_session_path(session), method: :delete, data: { turbo_confirm: "Удалить эту сессию?" }, class: "p-2.5 text-zinc-400 hover:text-red-500 hover:bg-red-50 dark:hover:bg-red-900/20 rounded-lg transition-colors" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                  </svg>
                <% end %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <!-- Empty state -->
      <div class="p-12 text-center">
        <div class="relative inline-block mb-6">
          <div class="absolute inset-0 bg-sky-500/20 rounded-full blur-2xl"></div>
          <div class="relative w-20 h-20 mx-auto rounded-2xl bg-gradient-to-br from-sky-400 to-sky-600 flex items-center justify-center shadow-xl shadow-sky-500/30">
            <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm5.894 8.221l-1.97 9.28c-.145.658-.537.818-1.084.508l-3-2.21-1.446 1.394c-.14.18-.357.295-.6.295l.213-3.054 5.56-5.022c.242-.213-.054-.334-.373-.121L8.32 13.617l-2.96-.924c-.64-.203-.658-.64.135-.954l11.566-4.458c.538-.196 1.006.128.833.94z"/>
            </svg>
          </div>
        </div>
        <h3 class="text-lg font-semibold text-zinc-900 dark:text-zinc-50 mb-2">Нет подключённых аккаунтов</h3>
        <p class="text-zinc-500 dark:text-zinc-400 mb-6 max-w-sm mx-auto">
          Авторизуйте Telegram аккаунт для импорта истории ваших каналов и анализа стиля
        </p>
        <%= link_to new_telegram_session_path, class: "inline-flex items-center gap-2 px-5 py-2.5 bg-gradient-to-r from-sky-500 to-sky-600 text-white rounded-xl font-medium shadow-lg shadow-sky-500/25 hover:shadow-sky-500/40 hover:scale-[1.02] transition-all duration-200" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Добавить аккаунт
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
