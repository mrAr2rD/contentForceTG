<div class="dashboard-page">
  <!-- Header -->
  <% header_actions = capture do %>
    <%= link_to new_post_path, class: "inline-flex items-center gap-2 px-4 py-2 bg-zinc-900 text-zinc-50 hover:bg-zinc-900/90 dark:bg-zinc-50 dark:text-zinc-900 dark:hover:bg-zinc-50/90 rounded-md text-sm font-medium transition-colors shadow-sm" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/>
      </svg>
      Новый пост
    <% end %>
  <% end %>
  <%= render 'shared/page_header',
      title: "Посты",
      subtitle: "Управляйте контентом для публикации",
      actions: header_actions %>

  <!-- Filters -->
  <div class="flex items-center gap-2 mb-6 overflow-x-auto pb-2">
    <%= link_to posts_path, class: "inline-flex h-8 items-center justify-center rounded-md px-3 py-1 text-xs font-medium transition-colors #{params[:status].blank? ? 'bg-zinc-200 text-zinc-900 dark:bg-zinc-800 dark:text-zinc-50' : 'text-zinc-600 hover:bg-zinc-100 hover:text-zinc-900 dark:text-zinc-400 dark:hover:bg-zinc-800 dark:hover:text-zinc-50'}" do %>
      Все
    <% end %>
    <%= link_to posts_path(status: 'draft'), class: "inline-flex h-8 items-center justify-center rounded-md px-3 py-1 text-xs font-medium transition-colors #{params[:status] == 'draft' ? 'bg-zinc-200 text-zinc-900 dark:bg-zinc-800 dark:text-zinc-50' : 'text-zinc-600 hover:bg-zinc-100 hover:text-zinc-900 dark:text-zinc-400 dark:hover:bg-zinc-800 dark:hover:text-zinc-50'}" do %>
      Черновики
    <% end %>
    <%= link_to posts_path(status: 'scheduled'), class: "inline-flex h-8 items-center justify-center rounded-md px-3 py-1 text-xs font-medium transition-colors #{params[:status] == 'scheduled' ? 'bg-zinc-200 text-zinc-900 dark:bg-zinc-800 dark:text-zinc-50' : 'text-zinc-600 hover:bg-zinc-100 hover:text-zinc-900 dark:text-zinc-400 dark:hover:bg-zinc-800 dark:hover:text-zinc-50'}" do %>
      Запланированные
    <% end %>
    <%= link_to posts_path(status: 'published'), class: "inline-flex h-8 items-center justify-center rounded-md px-3 py-1 text-xs font-medium transition-colors #{params[:status] == 'published' ? 'bg-zinc-200 text-zinc-900 dark:bg-zinc-800 dark:text-zinc-50' : 'text-zinc-600 hover:bg-zinc-100 hover:text-zinc-900 dark:text-zinc-400 dark:hover:bg-zinc-800 dark:hover:text-zinc-50'}" do %>
      Опубликованные
    <% end %>
  </div>

  <% if @posts.any? %>
    <div class="bg-white dark:bg-zinc-900 border border-zinc-200 dark:border-zinc-800 rounded-lg divide-y divide-zinc-200 dark:divide-zinc-800">
      <% @posts.each do |post| %>
        <div class="p-4 hover:bg-zinc-50 dark:hover:bg-zinc-800/50 transition-colors">
          <div class="flex items-start gap-4">
            <div class="w-10 h-10 rounded-lg flex items-center justify-center flex-shrink-0 <%=
              case post.status
              when 'published' then 'bg-green-100 dark:bg-green-900/30'
              when 'scheduled' then 'bg-yellow-100 dark:bg-yellow-900/30'
              when 'failed' then 'bg-red-100 dark:bg-red-900/30'
              else 'bg-zinc-100 dark:bg-zinc-800'
              end %>">
              <svg class="w-5 h-5 <%=
                case post.status
                when 'published' then 'text-green-600 dark:text-green-400'
                when 'scheduled' then 'text-yellow-600 dark:text-yellow-400'
                when 'failed' then 'text-red-600 dark:text-red-400'
                else 'text-zinc-600 dark:text-zinc-400'
                end %>" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                <% if post.status == 'published' %>
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
                <% elsif post.status == 'scheduled' %>
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                <% elsif post.status == 'failed' %>
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                <% else %>
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                <% end %>
              </svg>
            </div>

            <div class="flex-1 min-w-0">
              <div class="flex items-center gap-2 mb-1">
                <h3 class="text-sm font-semibold text-zinc-900 dark:text-zinc-50 truncate">
                  <%= link_to post.title.presence || post.content.truncate(50), post_path(post), class: "hover:text-primary-600 dark:hover:text-primary-400 transition-colors" %>
                </h3>
                <% case post.status %>
                <% when "published" %>
                  <span class="px-2 py-0.5 bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-300 text-xs font-medium rounded">Опубликован</span>
                <% when "scheduled" %>
                  <span class="px-2 py-0.5 bg-yellow-100 dark:bg-yellow-900/30 text-yellow-700 dark:text-yellow-300 text-xs font-medium rounded">Запланирован</span>
                <% when "draft" %>
                  <span class="px-2 py-0.5 bg-zinc-100 dark:bg-zinc-800 text-zinc-600 dark:text-zinc-400 text-xs font-medium rounded">Черновик</span>
                <% when "failed" %>
                  <span class="px-2 py-0.5 bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-300 text-xs font-medium rounded">Ошибка</span>
                <% end %>
              </div>

              <p class="text-xs text-zinc-500 dark:text-zinc-400 line-clamp-2 mb-2"><%= post.content.truncate(150) %></p>

              <div class="flex items-center gap-4 text-xs text-zinc-500 dark:text-zinc-400">
                <% if post.project %>
                  <span class="flex items-center gap-1">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
                    </svg>
                    <%= post.project.name %>
                  </span>
                <% end %>
                <% if post.telegram_bot %>
                  <span class="flex items-center gap-1">
                    <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0z"/>
                    </svg>
                    @<%= post.telegram_bot.bot_username %>
                  </span>
                <% end %>
                <span><%= time_ago_in_words(post.created_at) %> назад</span>
              </div>
            </div>

            <div class="flex items-center gap-1">
              <%= link_to editor_posts_path(post_id: post.id), class: "p-1.5 text-zinc-500 hover:text-zinc-900 hover:bg-zinc-100 dark:text-zinc-400 dark:hover:text-zinc-50 dark:hover:bg-zinc-800 rounded transition-colors", title: "Редактировать" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
              <% end %>
              <% if post.draft? && post.telegram_bot %>
                <%= button_to publish_post_path(post), method: :post, class: "p-1.5 text-zinc-500 hover:text-green-600 hover:bg-green-50 dark:text-zinc-400 dark:hover:text-green-400 dark:hover:bg-green-900/30 rounded transition-colors", title: "Опубликовать" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
                  </svg>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white dark:bg-zinc-900 border border-zinc-200 dark:border-zinc-800 rounded-lg p-12 text-center">
      <div class="w-12 h-12 bg-zinc-100 dark:bg-zinc-800 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-6 h-6 text-zinc-400 dark:text-zinc-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
      </div>
      <h3 class="text-base font-semibold text-zinc-900 dark:text-zinc-50 mb-2">Нет постов</h3>
      <p class="text-sm text-zinc-500 dark:text-zinc-400 mb-6">Создайте первый пост для вашего канала</p>
      <%= link_to new_post_path, class: "inline-flex items-center gap-2 px-4 py-2 bg-zinc-900 text-zinc-50 hover:bg-zinc-900/90 dark:bg-zinc-50 dark:text-zinc-900 dark:hover:bg-zinc-50/90 rounded-md text-sm font-medium transition-colors shadow-sm" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/>
        </svg>
        Создать первый пост
      <% end %>
    </div>
  <% end %>
</div>
