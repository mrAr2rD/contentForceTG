<div class="max-w-7xl mx-auto px-8 py-8">
  <!-- Header -->
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-2xl font-semibold text-foreground">Посты</h1>
      <p class="text-sm text-muted-foreground mt-1">Управляйте контентом для публикации</p>
    </div>
    <%= link_to new_post_path, class: "inline-flex h-10 items-center justify-center gap-2 rounded-md bg-primary px-4 py-2 text-sm font-semibold text-primary-foreground ring-offset-background transition-colors hover:bg-primary/90 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/>
      </svg>
      Новый пост
    <% end %>
  </div>

  <!-- Filters -->
  <div class="flex items-center gap-2 mb-4">
    <%= link_to posts_path, class: "inline-flex h-8 items-center justify-center rounded-md px-3 py-1 text-xs font-medium transition-colors #{params[:status].blank? ? 'bg-accent text-accent-foreground' : 'bg-transparent text-muted-foreground hover:bg-accent hover:text-accent-foreground'}" do %>
      Все
    <% end %>
    <%= link_to posts_path(status: 'draft'), class: "inline-flex h-8 items-center justify-center rounded-md px-3 py-1 text-xs font-medium transition-colors #{params[:status] == 'draft' ? 'bg-accent text-accent-foreground' : 'bg-transparent text-muted-foreground hover:bg-accent hover:text-accent-foreground'}" do %>
      Черновики
    <% end %>
    <%= link_to posts_path(status: 'scheduled'), class: "inline-flex h-8 items-center justify-center rounded-md px-3 py-1 text-xs font-medium transition-colors #{params[:status] == 'scheduled' ? 'bg-accent text-accent-foreground' : 'bg-transparent text-muted-foreground hover:bg-accent hover:text-accent-foreground'}" do %>
      Запланированные
    <% end %>
    <%= link_to posts_path(status: 'published'), class: "inline-flex h-8 items-center justify-center rounded-md px-3 py-1 text-xs font-medium transition-colors #{params[:status] == 'published' ? 'bg-accent text-accent-foreground' : 'bg-transparent text-muted-foreground hover:bg-accent hover:text-accent-foreground'}" do %>
      Опубликованные
    <% end %>
  </div>

  <% if @posts.any? %>
    <div class="bg-card border border-border rounded-lg divide-y divide-border">
      <% @posts.each do |post| %>
        <div class="p-4 hover:bg-accent transition-colors">
          <div class="flex items-start gap-4">
            <div class="w-8 h-8 bg-muted rounded flex items-center justify-center flex-shrink-0">
              <svg class="w-4 h-4 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            </div>
            
            <div class="flex-1 min-w-0">
              <div class="flex items-center gap-2 mb-1">
                <h3 class="text-sm font-semibold text-foreground truncate">
                  <%= link_to post.title, post_path(post), class: "hover:text-foreground/80" %>
                </h3>
                <% case post.status %>
                <% when "published" %>
                  <span class="px-2 py-0.5 bg-green-50 text-green-700 text-xs font-medium rounded">Опубликован</span>
                <% when "scheduled" %>
                  <span class="px-2 py-0.5 bg-blue-50 text-blue-700 text-xs font-medium rounded">Запланирован</span>
                <% when "draft" %>
                  <span class="px-2 py-0.5 bg-muted text-muted-foreground text-xs font-medium rounded">Черновик</span>
                <% when "failed" %>
                  <span class="px-2 py-0.5 bg-red-50 text-red-700 text-xs font-medium rounded">Ошибка</span>
                <% end %>
              </div>
              
              <p class="text-xs text-muted-foreground line-clamp-2 mb-2"><%= post.content.truncate(150) %></p>
              
              <div class="flex items-center gap-4 text-xs text-muted-foreground">
                <% if post.project %>
                  <span class="flex items-center gap-1">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
                    </svg>
                    <%= post.project.name %>
                  </span>
                <% end %>
                <% if post.telegram_bot %>
                  <span class="flex items-center gap-1">
                    <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0z"/>
                    </svg>
                    @<%= post.telegram_bot.bot_username %>
                  </span>
                <% end %>
                <span><%= time_ago_in_words(post.created_at) %> назад</span>
              </div>
            </div>

            <div class="flex items-center gap-1">
              <%= link_to edit_post_path(post), class: "p-1.5 text-muted-foreground hover:text-foreground hover:bg-accent rounded transition-colors" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
              <% end %>
              <% if post.draft? && post.telegram_bot %>
                <%= button_to publish_post_path(post), method: :post, class: "p-1.5 text-muted-foreground hover:text-green-600 hover:bg-green-50 rounded transition-colors" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
                  </svg>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-card border border-border rounded-lg p-12 text-center">
      <div class="w-12 h-12 bg-muted rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-6 h-6 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
      </div>
      <h3 class="text-sm font-semibold text-foreground mb-2">Нет постов</h3>
      <p class="text-xs text-muted-foreground mb-6">Создайте первый пост для вашего канала</p>
      <%= link_to new_post_path, class: "inline-flex h-10 items-center justify-center gap-2 rounded-md bg-primary px-4 py-2 text-sm font-semibold text-primary-foreground ring-offset-background transition-colors hover:bg-primary/90 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/>
        </svg>
        Создать первый пост
      <% end %>
    </div>
  <% end %>
</div>
