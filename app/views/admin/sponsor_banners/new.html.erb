<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-6">
    <%= link_to admin_sponsor_banners_path, class: "text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300 flex items-center gap-2" do %>
      <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Назад к списку
    <% end %>
  </div>

  <h1 class="text-3xl font-bold text-zinc-900 dark:text-zinc-50 mb-8">Создать рекламный баннер</h1>

  <div class="bg-white dark:bg-zinc-900 rounded-lg shadow p-6">
    <%= render "form", sponsor_banner: @sponsor_banner %>
  </div>

  <!-- Превью баннера -->
  <div class="mt-8">
    <h2 class="text-lg font-semibold text-zinc-900 dark:text-zinc-50 mb-4">Предпросмотр</h2>
    <div class="relative">
      <div class="fixed bottom-4 right-4 bg-zinc-900 border border-zinc-700 rounded-xl p-4 shadow-2xl max-w-sm z-50 animate-fade-in-up">
        <button class="absolute top-2 right-2 text-zinc-400 hover:text-zinc-100 transition-colors">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>

        <div class="flex items-center gap-4">
          <div class="flex-shrink-0 w-12 h-12 bg-zinc-800 rounded-lg flex items-center justify-center">
            <svg class="h-6 w-6 text-zinc-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>

          <div class="flex-1 min-w-0">
            <div class="flex items-center gap-2 mb-1">
              <h3 class="text-sm font-semibold text-zinc-50 truncate">Название спонсора</h3>
              <span class="px-2 py-0.5 text-xs font-medium bg-yellow-500/10 text-yellow-500 rounded-full whitespace-nowrap">Спонсор</span>
            </div>
            <p class="text-xs text-zinc-400">Краткое описание спонсора</p>
          </div>

          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-zinc-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.5s ease-out;
  }
</style>
