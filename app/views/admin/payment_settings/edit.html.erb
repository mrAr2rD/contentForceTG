<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h2 class="text-3xl font-bold text-zinc-900 dark:text-zinc-50">Настройки платежей</h2>
      <p class="mt-2 text-zinc-600 dark:text-zinc-400">Интеграция с Robokassa</p>
    </div>
  </div>

  <!-- Статус -->
  <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg p-6">
    <div class="flex items-center gap-3">
      <% if @config.configured? %>
        <div class="w-3 h-3 bg-green-500 rounded-full"></div>
        <span class="text-sm font-medium text-green-600 dark:text-green-400">Robokassa настроена и активна</span>
      <% elsif @config.enabled? %>
        <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
        <span class="text-sm font-medium text-yellow-600 dark:text-yellow-400">Robokassa включена, но не полностью настроена</span>
      <% else %>
        <div class="w-3 h-3 bg-zinc-400 rounded-full"></div>
        <span class="text-sm font-medium text-zinc-500 dark:text-zinc-400">Robokassa отключена</span>
      <% end %>
    </div>
  </div>

  <!-- Форма настроек -->
  <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg p-6">
    <%= form_with model: @config, url: admin_payment_settings_path, method: :patch, class: "space-y-6" do |f| %>
      <!-- Включить/выключить -->
      <div class="flex items-center justify-between p-4 bg-zinc-50 dark:bg-zinc-900 rounded-lg">
        <div>
          <h3 class="text-sm font-medium text-zinc-900 dark:text-zinc-50">Включить приём платежей</h3>
          <p class="text-xs text-zinc-500 dark:text-zinc-400 mt-1">Активирует интеграцию с Robokassa</p>
        </div>
        <label class="relative inline-flex items-center cursor-pointer">
          <%= f.check_box :enabled, class: "sr-only peer" %>
          <div class="w-11 h-6 bg-zinc-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-300 dark:peer-focus:ring-primary-800 rounded-full peer dark:bg-zinc-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-primary-600"></div>
        </label>
      </div>

      <!-- Тестовый режим -->
      <div class="flex items-center justify-between p-4 bg-zinc-50 dark:bg-zinc-900 rounded-lg">
        <div>
          <h3 class="text-sm font-medium text-zinc-900 dark:text-zinc-50">Тестовый режим</h3>
          <p class="text-xs text-zinc-500 dark:text-zinc-400 mt-1">Платежи будут проходить в тестовом режиме (без реальных денег)</p>
        </div>
        <label class="relative inline-flex items-center cursor-pointer">
          <%= f.check_box :test_mode, class: "sr-only peer" %>
          <div class="w-11 h-6 bg-zinc-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-300 dark:peer-focus:ring-primary-800 rounded-full peer dark:bg-zinc-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-yellow-500"></div>
        </label>
      </div>

      <!-- Merchant Login -->
      <div>
        <%= f.label :merchant_login, "Идентификатор магазина (MerchantLogin)", class: "block text-sm font-medium text-zinc-900 dark:text-zinc-50 mb-2" %>
        <%= f.text_field :merchant_login,
            placeholder: "Ваш MerchantLogin из Robokassa",
            class: "w-full px-3 py-2 border border-zinc-200 dark:border-zinc-800 rounded-md bg-white dark:bg-zinc-950 text-zinc-900 dark:text-zinc-50 placeholder:text-zinc-400 focus:ring-2 focus:ring-primary-500 focus:border-primary-500" %>
        <p class="mt-1 text-xs text-zinc-500 dark:text-zinc-400">Найти можно в <a href="https://partner.robokassa.ru/" target="_blank" class="text-primary-600 hover:underline">личном кабинете Robokassa</a></p>
      </div>

      <!-- Password 1 -->
      <div>
        <%= f.label :password_1, "Пароль #1", class: "block text-sm font-medium text-zinc-900 dark:text-zinc-50 mb-2" %>
        <%= f.password_field :password_1,
            placeholder: @config.password_1.present? ? "••••••••" : "Пароль #1 для формирования подписи",
            class: "w-full px-3 py-2 border border-zinc-200 dark:border-zinc-800 rounded-md bg-white dark:bg-zinc-950 text-zinc-900 dark:text-zinc-50 placeholder:text-zinc-400 focus:ring-2 focus:ring-primary-500 focus:border-primary-500" %>
        <p class="mt-1 text-xs text-zinc-500 dark:text-zinc-400">Используется для формирования подписи запроса на оплату</p>
      </div>

      <!-- Password 2 -->
      <div>
        <%= f.label :password_2, "Пароль #2", class: "block text-sm font-medium text-zinc-900 dark:text-zinc-50 mb-2" %>
        <%= f.password_field :password_2,
            placeholder: @config.password_2.present? ? "••••••••" : "Пароль #2 для проверки уведомлений",
            class: "w-full px-3 py-2 border border-zinc-200 dark:border-zinc-800 rounded-md bg-white dark:bg-zinc-950 text-zinc-900 dark:text-zinc-50 placeholder:text-zinc-400 focus:ring-2 focus:ring-primary-500 focus:border-primary-500" %>
        <p class="mt-1 text-xs text-zinc-500 dark:text-zinc-400">Используется для проверки уведомлений от Robokassa</p>
      </div>

      <!-- Webhook URLs -->
      <div class="p-4 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg">
        <h4 class="text-sm font-medium text-blue-900 dark:text-blue-100 mb-3">Настройки в личном кабинете Robokassa</h4>
        <p class="text-xs text-blue-700 dark:text-blue-300 mb-3">Укажите следующие URL в настройках магазина:</p>
        <dl class="space-y-2 text-xs">
          <div>
            <dt class="font-medium text-blue-800 dark:text-blue-200">Result URL:</dt>
            <dd class="font-mono text-blue-600 dark:text-blue-400 break-all"><%= webhooks_robokassa_result_url(host: request.host, port: request.port, protocol: request.protocol) %></dd>
          </div>
          <div>
            <dt class="font-medium text-blue-800 dark:text-blue-200">Success URL:</dt>
            <dd class="font-mono text-blue-600 dark:text-blue-400 break-all"><%= webhooks_robokassa_success_url(host: request.host, port: request.port, protocol: request.protocol) %></dd>
          </div>
          <div>
            <dt class="font-medium text-blue-800 dark:text-blue-200">Fail URL:</dt>
            <dd class="font-mono text-blue-600 dark:text-blue-400 break-all"><%= webhooks_robokassa_fail_url(host: request.host, port: request.port, protocol: request.protocol) %></dd>
          </div>
        </dl>
      </div>

      <div class="flex justify-end pt-4 border-t border-zinc-200 dark:border-zinc-800">
        <%= f.submit "Сохранить настройки", class: "px-4 py-2 text-sm font-medium text-white bg-primary-600 rounded-md hover:bg-primary-700 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
