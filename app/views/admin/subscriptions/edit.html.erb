<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h2 class="text-3xl font-bold text-zinc-900 dark:text-zinc-50">Редактирование подписки</h2>
      <p class="mt-2 text-zinc-600 dark:text-zinc-400">Пользователь: <%= @subscription.user.email %></p>
    </div>
    <div class="flex gap-2">
      <%= link_to "Отмена", admin_subscription_path(@subscription), class: "px-4 py-2 text-sm font-medium text-zinc-700 dark:text-zinc-300 bg-zinc-100 dark:bg-zinc-800 rounded-md hover:bg-zinc-200 dark:hover:bg-zinc-700" %>
    </div>
  </div>

  <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg p-6">
    <%= form_with model: [:admin, @subscription], class: "space-y-6" do |f| %>
      <div>
        <%= f.label :plan, "План", class: "block text-sm font-medium text-zinc-900 dark:text-zinc-50 mb-2" %>
        <%= f.select :plan, Subscription.plans.keys.map { |p| [p.titleize, p] }, {}, class: "w-full px-3 py-2 border border-zinc-200 dark:border-zinc-800 rounded-md bg-white dark:bg-zinc-950 text-zinc-900 dark:text-zinc-50 focus:ring-2 focus:ring-primary-500 focus:border-primary-500" %>
      </div>

      <div>
        <%= f.label :status, "Статус", class: "block text-sm font-medium text-zinc-900 dark:text-zinc-50 mb-2" %>
        <%= f.select :status, Subscription.statuses.keys.map { |s| [s.titleize, s] }, {}, class: "w-full px-3 py-2 border border-zinc-200 dark:border-zinc-800 rounded-md bg-white dark:bg-zinc-950 text-zinc-900 dark:text-zinc-50 focus:ring-2 focus:ring-primary-500 focus:border-primary-500" %>
      </div>

      <div>
        <%= f.label :current_period_end, "Период до", class: "block text-sm font-medium text-zinc-900 dark:text-zinc-50 mb-2" %>
        <%= f.datetime_local_field :current_period_end, class: "w-full px-3 py-2 border border-zinc-200 dark:border-zinc-800 rounded-md bg-white dark:bg-zinc-950 text-zinc-900 dark:text-zinc-50 focus:ring-2 focus:ring-primary-500 focus:border-primary-500" %>
      </div>

      <div class="flex justify-end gap-3">
        <%= link_to "Отмена", admin_subscription_path(@subscription), class: "px-4 py-2 text-sm font-medium text-zinc-700 dark:text-zinc-300 bg-zinc-100 dark:bg-zinc-800 rounded-md hover:bg-zinc-200 dark:hover:bg-zinc-700" %>
        <%= f.submit "Сохранить", class: "px-4 py-2 text-sm font-medium text-white bg-primary-600 rounded-md hover:bg-primary-700 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
