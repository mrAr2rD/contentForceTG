<div class="max-w-4xl mx-auto px-8 py-8">
  <!-- Header -->
  <div class="mb-6">
    <%= link_to admin_users_path, class: "inline-flex items-center gap-2 text-xs text-muted-foreground hover:text-foreground mb-3 transition-colors" do %>
      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"/>
      </svg>
      Назад к пользователям
    <% end %>
    <div class="flex items-center gap-3 mb-2">
      <div class="w-10 h-10 rounded-full bg-gradient-to-br from-primary-500 to-primary-600 flex items-center justify-center text-white text-lg font-semibold">
        <%= @user.email[0].upcase %>
      </div>
      <div>
        <h1 class="text-xl font-semibold text-foreground">Редактировать пользователя</h1>
        <p class="text-xs text-muted-foreground"><%= @user.email %></p>
      </div>
    </div>
  </div>

  <!-- Form -->
  <div class="bg-card border border-border rounded-lg">
    <%= form_with model: [:admin, @user], local: true, class: "p-6 space-y-6" do |f| %>
      <% if @user.errors.any? %>
        <div class="bg-red-50 dark:bg-red-900/10 border border-red-200 dark:border-red-900 rounded-md p-3">
          <div class="flex items-start gap-2">
            <svg class="w-4 h-4 text-red-600 dark:text-red-400 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
            </svg>
            <div>
              <h3 class="text-xs font-medium text-red-800 dark:text-red-200 mb-1">Ошибки при сохранении</h3>
              <ul class="text-xs text-red-700 dark:text-red-300 space-y-0.5">
                <% @user.errors.full_messages.each do |error| %>
                  <li>• <%= error %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Email -->
      <div class="space-y-2">
        <%= f.label :email, "Email", class: "text-sm font-medium text-foreground" %>
        <%= f.email_field :email,
            class: "flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50" %>
      </div>

      <!-- Role -->
      <div class="space-y-2">
        <%= f.label :role, "Роль", class: "text-sm font-medium text-foreground" %>
        <%= f.select :role,
            [['Пользователь', 'user'], ['Администратор', 'admin']],
            {},
            class: "flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2" %>
        <p class="text-xs text-muted-foreground">Администраторы имеют полный доступ к системе</p>
      </div>

      <!-- Info -->
      <div class="pt-4 border-t border-border">
        <h3 class="text-sm font-semibold text-foreground mb-3">Информация</h3>
        <div class="space-y-2 text-xs">
          <div class="flex items-center justify-between py-2">
            <span class="text-muted-foreground">ID пользователя:</span>
            <code class="px-2 py-1 bg-muted rounded text-foreground font-mono"><%= @user.id %></code>
          </div>
          <div class="flex items-center justify-between py-2">
            <span class="text-muted-foreground">Зарегистрирован:</span>
            <span class="text-foreground"><%= @user.created_at.strftime("%d.%m.%Y %H:%M") %></span>
          </div>
          <% if @user.telegram_id %>
            <div class="flex items-center justify-between py-2">
              <span class="text-muted-foreground">Telegram ID:</span>
              <code class="px-2 py-1 bg-muted rounded text-foreground font-mono"><%= @user.telegram_id %></code>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Actions -->
      <div class="pt-4 flex items-center gap-3 border-t border-border">
        <%= f.submit "Сохранить изменения", class: "inline-flex h-10 items-center justify-center rounded-md bg-primary px-4 py-2 text-sm font-semibold text-primary-foreground ring-offset-background transition-colors hover:bg-primary/90 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2" %>
        <%= link_to "Отмена", admin_user_path(@user), class: "inline-flex h-10 items-center justify-center rounded-md border border-input bg-background px-4 py-2 text-sm font-medium ring-offset-background transition-colors hover:bg-accent hover:text-accent-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2" %>
      </div>
    <% end %>
  </div>

  <!-- Danger Zone -->
  <% if @user != current_user %>
    <div class="mt-6 bg-red-50 dark:bg-red-900/10 border border-red-200 dark:border-red-900 rounded-lg p-6">
      <div class="flex items-start gap-3">
        <svg class="w-5 h-5 text-red-600 dark:text-red-400 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
        </svg>
        <div class="flex-1">
          <h3 class="text-sm font-semibold text-red-900 dark:text-red-100 mb-2">Опасная зона</h3>
          <p class="text-xs text-red-700 dark:text-red-300 mb-3">Удаление пользователя необратимо. Все данные будут потеряны.</p>
          <%= button_to "Удалить пользователя", admin_user_path(@user), method: :delete, data: { turbo_confirm: "Вы уверены? Это действие необратимо!" }, class: "inline-flex h-9 items-center justify-center rounded-md bg-red-600 px-3 py-2 text-xs font-semibold text-white ring-offset-background transition-colors hover:bg-red-700 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
