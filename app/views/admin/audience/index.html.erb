<div class="space-y-6">
  <!-- Header with period filter -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h2 class="text-2xl font-bold text-zinc-900 dark:text-zinc-50">Аналитика аудитории</h2>
      <p class="mt-1 text-sm text-zinc-500 dark:text-zinc-400">
        Данные из онбординга пользователей
      </p>
    </div>

    <div class="flex items-center gap-2">
      <%= link_to "7 дней", admin_audience_path(period: 7), class: "px-3 py-1.5 text-sm rounded-lg #{@period == 7 ? 'bg-primary-600 text-white' : 'bg-zinc-100 dark:bg-zinc-800 text-zinc-700 dark:text-zinc-300 hover:bg-zinc-200 dark:hover:bg-zinc-700'}" %>
      <%= link_to "30 дней", admin_audience_path(period: 30), class: "px-3 py-1.5 text-sm rounded-lg #{@period == 30 ? 'bg-primary-600 text-white' : 'bg-zinc-100 dark:bg-zinc-800 text-zinc-700 dark:text-zinc-300 hover:bg-zinc-200 dark:hover:bg-zinc-700'}" %>
      <%= link_to "90 дней", admin_audience_path(period: 90), class: "px-3 py-1.5 text-sm rounded-lg #{@period == 90 ? 'bg-primary-600 text-white' : 'bg-zinc-100 dark:bg-zinc-800 text-zinc-700 dark:text-zinc-300 hover:bg-zinc-200 dark:hover:bg-zinc-700'}" %>
      <%= link_to "Все время", admin_audience_path(period: 0), class: "px-3 py-1.5 text-sm rounded-lg #{@period == 0 ? 'bg-primary-600 text-white' : 'bg-zinc-100 dark:bg-zinc-800 text-zinc-700 dark:text-zinc-300 hover:bg-zinc-200 dark:hover:bg-zinc-700'}" %>
    </div>
  </div>

  <!-- Metrics cards -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
    <!-- Total users -->
    <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg p-6">
      <div class="flex items-center justify-between mb-4">
        <span class="text-sm font-medium text-zinc-500 dark:text-zinc-400">Всего пользователей</span>
        <div class="w-10 h-10 bg-primary-100 dark:bg-primary-900/20 rounded-full flex items-center justify-center">
          <svg class="w-5 h-5 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
          </svg>
        </div>
      </div>
      <p class="text-2xl font-bold text-zinc-900 dark:text-zinc-50"><%= number_with_delimiter(@metrics[:total]) %></p>
      <p class="text-xs text-zinc-500 dark:text-zinc-400 mt-1">
        +<%= @metrics[:new_today] %> сегодня
      </p>
    </div>

    <!-- Completed onboarding -->
    <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg p-6">
      <div class="flex items-center justify-between mb-4">
        <span class="text-sm font-medium text-zinc-500 dark:text-zinc-400">Прошли онбординг</span>
        <div class="w-10 h-10 bg-green-100 dark:bg-green-900/20 rounded-full flex items-center justify-center">
          <svg class="w-5 h-5 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
      <p class="text-2xl font-bold text-green-600 dark:text-green-400"><%= number_with_delimiter(@metrics[:completed]) %></p>
      <p class="text-xs text-zinc-500 dark:text-zinc-400 mt-1">
        Заполнили все поля
      </p>
    </div>

    <!-- Skipped onboarding -->
    <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg p-6">
      <div class="flex items-center justify-between mb-4">
        <span class="text-sm font-medium text-zinc-500 dark:text-zinc-400">Пропустили</span>
        <div class="w-10 h-10 bg-amber-100 dark:bg-amber-900/20 rounded-full flex items-center justify-center">
          <svg class="w-5 h-5 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
          </svg>
        </div>
      </div>
      <p class="text-2xl font-bold text-amber-600 dark:text-amber-400"><%= number_with_delimiter(@metrics[:skipped]) %></p>
      <p class="text-xs text-zinc-500 dark:text-zinc-400 mt-1">
        Нажали "Пропустить"
      </p>
    </div>

    <!-- Conversion rate -->
    <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg p-6">
      <div class="flex items-center justify-between mb-4">
        <span class="text-sm font-medium text-zinc-500 dark:text-zinc-400">Конверсия</span>
        <div class="w-10 h-10 bg-blue-100 dark:bg-blue-900/20 rounded-full flex items-center justify-center">
          <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
        </div>
      </div>
      <p class="text-2xl font-bold text-zinc-900 dark:text-zinc-50"><%= @metrics[:conversion_rate] %>%</p>
      <p class="text-xs text-zinc-500 dark:text-zinc-400 mt-1">
        Прошли / Всего
      </p>
    </div>
  </div>

  <!-- Charts row 1: Referral Sources & Age Ranges -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Referral Sources (Pie) -->
    <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg p-6">
      <h3 class="text-lg font-semibold text-zinc-900 dark:text-zinc-50 mb-4">Источники трафика</h3>
      <div class="h-64">
        <canvas id="referralSourcesChart"></canvas>
      </div>
      <div class="mt-4 space-y-2">
        <% @chart_data[:referral_sources].first(5).each do |item| %>
          <% next if item[:count].zero? %>
          <div class="flex justify-between items-center text-sm">
            <span class="text-zinc-600 dark:text-zinc-400"><%= item[:label] %></span>
            <span class="font-medium text-zinc-900 dark:text-zinc-50"><%= item[:count] %></span>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Age Ranges (Pie) -->
    <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg p-6">
      <h3 class="text-lg font-semibold text-zinc-900 dark:text-zinc-50 mb-4">Возрастное распределение</h3>
      <div class="h-64">
        <canvas id="ageRangesChart"></canvas>
      </div>
      <div class="mt-4 space-y-2">
        <% @chart_data[:age_ranges].each do |item| %>
          <% next if item[:count].zero? %>
          <div class="flex justify-between items-center text-sm">
            <span class="text-zinc-600 dark:text-zinc-400"><%= item[:label] %></span>
            <span class="font-medium text-zinc-900 dark:text-zinc-50"><%= item[:count] %></span>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Charts row 2: Occupations & Company Sizes -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Occupations (Bar) -->
    <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg p-6">
      <h3 class="text-lg font-semibold text-zinc-900 dark:text-zinc-50 mb-4">Сферы деятельности</h3>
      <div class="h-80">
        <canvas id="occupationsChart"></canvas>
      </div>
    </div>

    <!-- Company Sizes (Bar) -->
    <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg p-6">
      <h3 class="text-lg font-semibold text-zinc-900 dark:text-zinc-50 mb-4">Размер команды</h3>
      <div class="h-80">
        <canvas id="companySizesChart"></canvas>
      </div>
    </div>
  </div>

  <!-- Registrations by day (Line) -->
  <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg p-6">
    <h3 class="text-lg font-semibold text-zinc-900 dark:text-zinc-50 mb-4">Регистрации по дням</h3>
    <div class="h-64">
      <canvas id="registrationsChart"></canvas>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
  const isDarkMode = document.documentElement.classList.contains('dark');
  const textColor = isDarkMode ? '#A1A1AA' : '#71717A';
  const gridColor = isDarkMode ? '#27272A' : '#E4E4E7';

  // Color palette
  const colors = [
    '#00D4AA', '#00A896', '#028090', '#05668D', '#02C39A',
    '#F0B429', '#F76C5E', '#A855F7', '#3B82F6', '#EF4444'
  ];

  // Referral Sources (Doughnut)
  const referralData = <%= raw @chart_data[:referral_sources].map { |i| { label: i[:label], count: i[:count] } }.to_json %>;
  new Chart(document.getElementById('referralSourcesChart'), {
    type: 'doughnut',
    data: {
      labels: referralData.map(i => i.label),
      datasets: [{
        data: referralData.map(i => i.count),
        backgroundColor: colors,
        borderWidth: 0
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: {
          position: 'right',
          labels: { color: textColor, boxWidth: 12, padding: 10 }
        }
      }
    }
  });

  // Age Ranges (Doughnut)
  const ageData = <%= raw @chart_data[:age_ranges].map { |i| { label: i[:label], count: i[:count] } }.to_json %>;
  new Chart(document.getElementById('ageRangesChart'), {
    type: 'doughnut',
    data: {
      labels: ageData.map(i => i.label),
      datasets: [{
        data: ageData.map(i => i.count),
        backgroundColor: colors,
        borderWidth: 0
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: {
          position: 'right',
          labels: { color: textColor, boxWidth: 12, padding: 10 }
        }
      }
    }
  });

  // Occupations (Horizontal Bar)
  const occupationData = <%= raw @chart_data[:occupations].map { |i| { label: i[:label], count: i[:count] } }.to_json %>;
  new Chart(document.getElementById('occupationsChart'), {
    type: 'bar',
    data: {
      labels: occupationData.map(i => i.label),
      datasets: [{
        data: occupationData.map(i => i.count),
        backgroundColor: '#00D4AA',
        borderRadius: 4
      }]
    },
    options: {
      indexAxis: 'y',
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: { display: false }
      },
      scales: {
        x: {
          grid: { color: gridColor },
          ticks: { color: textColor }
        },
        y: {
          grid: { display: false },
          ticks: { color: textColor }
        }
      }
    }
  });

  // Company Sizes (Bar)
  const companyData = <%= raw @chart_data[:company_sizes].map { |i| { label: i[:label], count: i[:count] } }.to_json %>;
  new Chart(document.getElementById('companySizesChart'), {
    type: 'bar',
    data: {
      labels: companyData.map(i => i.label),
      datasets: [{
        data: companyData.map(i => i.count),
        backgroundColor: '#00A896',
        borderRadius: 4
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: { display: false }
      },
      scales: {
        x: {
          grid: { display: false },
          ticks: { color: textColor }
        },
        y: {
          grid: { color: gridColor },
          ticks: { color: textColor }
        }
      }
    }
  });

  // Registrations by day (Line)
  const regData = <%= raw @chart_data[:registrations_by_day].to_json %>;
  new Chart(document.getElementById('registrationsChart'), {
    type: 'line',
    data: {
      labels: regData.map(i => i.date),
      datasets: [{
        label: 'Регистрации',
        data: regData.map(i => i.count),
        borderColor: '#00D4AA',
        backgroundColor: 'rgba(0, 212, 170, 0.1)',
        fill: true,
        tension: 0.4,
        pointRadius: 3,
        pointBackgroundColor: '#00D4AA'
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: { display: false }
      },
      scales: {
        x: {
          grid: { color: gridColor },
          ticks: { color: textColor, maxRotation: 45 }
        },
        y: {
          grid: { color: gridColor },
          ticks: { color: textColor, stepSize: 1 },
          beginAtZero: true
        }
      }
    }
  });
});
</script>
