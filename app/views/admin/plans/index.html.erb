<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h2 class="text-2xl font-bold text-zinc-900 dark:text-zinc-50">Тарифные планы</h2>
      <p class="mt-1 text-sm text-zinc-500 dark:text-zinc-400">Управление ценами и лимитами тарифов</p>
    </div>
    <%= link_to new_admin_plan_path, class: "inline-flex items-center gap-2 px-4 py-2 bg-primary-600 text-white rounded-lg text-sm font-medium hover:bg-primary-700 transition-colors" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      Добавить план
    <% end %>
  </div>

  <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-zinc-200 dark:divide-zinc-800">
      <thead class="bg-zinc-50 dark:bg-zinc-900">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-zinc-500 dark:text-zinc-400 uppercase tracking-wider">План</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-zinc-500 dark:text-zinc-400 uppercase tracking-wider">Цена</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-zinc-500 dark:text-zinc-400 uppercase tracking-wider">Лимиты</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-zinc-500 dark:text-zinc-400 uppercase tracking-wider">Подписчики</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-zinc-500 dark:text-zinc-400 uppercase tracking-wider">Статус</th>
          <th class="px-6 py-3 text-right text-xs font-medium text-zinc-500 dark:text-zinc-400 uppercase tracking-wider">Действия</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-zinc-200 dark:divide-zinc-800">
        <% @plans.each do |plan| %>
          <tr class="hover:bg-zinc-50 dark:hover:bg-zinc-900">
            <td class="px-6 py-4">
              <div class="flex items-center">
                <div>
                  <p class="text-sm font-medium text-zinc-900 dark:text-zinc-50"><%= plan.name %></p>
                  <p class="text-xs text-zinc-500 dark:text-zinc-400"><%= plan.slug %></p>
                </div>
              </div>
            </td>
            <td class="px-6 py-4">
              <span class="text-sm font-semibold text-zinc-900 dark:text-zinc-50">
                <%= plan.free? ? 'Бесплатно' : "#{number_with_delimiter(plan.price.to_i)} ₽/мес" %>
              </span>
            </td>
            <td class="px-6 py-4">
              <div class="text-xs text-zinc-600 dark:text-zinc-400 space-y-1">
                <p>Проекты: <%= plan.limit_for(:projects) == Float::INFINITY ? '∞' : plan.limit_for(:projects) %></p>
                <p>AI генерации: <%= plan.limit_for(:ai_generations_per_month) == Float::INFINITY ? '∞' : plan.limit_for(:ai_generations_per_month) %></p>
              </div>
            </td>
            <td class="px-6 py-4">
              <span class="text-sm text-zinc-600 dark:text-zinc-400"><%= plan.subscriptions.count %></span>
            </td>
            <td class="px-6 py-4">
              <% if plan.active? %>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-700 dark:bg-green-900/20 dark:text-green-400">
                  Активен
                </span>
              <% else %>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-zinc-100 text-zinc-700 dark:bg-zinc-800 dark:text-zinc-400">
                  Неактивен
                </span>
              <% end %>
            </td>
            <td class="px-6 py-4 text-right">
              <%= link_to 'Редактировать', edit_admin_plan_path(plan), class: "text-sm text-primary-600 dark:text-primary-400 hover:underline" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
