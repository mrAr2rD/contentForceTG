<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h2 class="text-3xl font-bold text-zinc-900 dark:text-zinc-50">Проекты</h2>
      <p class="mt-2 text-zinc-600 dark:text-zinc-400">Управление проектами в системе</p>
    </div>
  </div>

  <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-zinc-200 dark:divide-zinc-800">
      <thead class="bg-zinc-50 dark:bg-zinc-900">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-zinc-500 dark:text-zinc-400 uppercase tracking-wider">Название</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-zinc-500 dark:text-zinc-400 uppercase tracking-wider">Владелец</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-zinc-500 dark:text-zinc-400 uppercase tracking-wider">Боты</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-zinc-500 dark:text-zinc-400 uppercase tracking-wider">Посты</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-zinc-500 dark:text-zinc-400 uppercase tracking-wider">Создан</th>
          <th class="px-6 py-3 text-right text-xs font-medium text-zinc-500 dark:text-zinc-400 uppercase tracking-wider">Действия</th>
        </tr>
      </thead>
      <tbody class="bg-white dark:bg-zinc-950 divide-y divide-zinc-200 dark:divide-zinc-800">
        <% @projects.each do |project| %>
          <tr class="hover:bg-zinc-50 dark:hover:bg-zinc-900/50">
            <td class="px-6 py-4">
              <div class="text-sm font-medium text-zinc-900 dark:text-zinc-50"><%= project.name %></div>
              <% if project.archived_at.present? %>
                <span class="text-xs text-orange-600">Архивирован</span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm text-zinc-900 dark:text-zinc-50">
                <%= link_to project.user.email, admin_user_path(project.user), class: "text-primary-600 hover:underline" %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-zinc-500 dark:text-zinc-400">
              <%= project.telegram_bots.count %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-zinc-500 dark:text-zinc-400">
              <%= project.posts.count %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-zinc-500 dark:text-zinc-400">
              <%= time_ago_in_words(project.created_at) %> назад
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
              <%= link_to "Просмотр", admin_project_path(project), class: "text-primary-600 dark:text-primary-400 hover:underline" %>
              <%= button_to "Удалить", admin_project_path(project), method: :delete, data: { turbo_confirm: "Удалить проект?" }, class: "text-red-600 dark:text-red-400 hover:underline" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <% if @projects.empty? %>
      <div class="px-6 py-12 text-center text-zinc-500 dark:text-zinc-400">
        Проекты не найдены
      </div>
    <% end %>
  </div>

  <%= paginate @projects if @projects.respond_to?(:total_pages) && @projects.total_pages > 1 %>
</div>
