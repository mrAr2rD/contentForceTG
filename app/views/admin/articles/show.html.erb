<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <div class="flex items-center gap-2 text-sm text-zinc-500 dark:text-zinc-400 mb-2">
        <%= link_to "Статьи", admin_articles_path, class: "hover:text-primary-600" %>
        <span>/</span>
        <span><%= @article.title.truncate(30) %></span>
      </div>
      <h2 class="text-3xl font-bold text-zinc-900 dark:text-zinc-50"><%= @article.title %></h2>
    </div>
    <div class="flex items-center gap-3">
      <%= link_to preview_admin_article_path(@article), target: "_blank", class: "inline-flex items-center gap-2 px-4 py-2 bg-zinc-100 dark:bg-zinc-800 text-zinc-700 dark:text-zinc-300 rounded-lg hover:bg-zinc-200 dark:hover:bg-zinc-700 transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
        </svg>
        Превью
      <% end %>
      <%= link_to edit_admin_article_path(@article), class: "inline-flex items-center gap-2 px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        Редактировать
      <% end %>
    </div>
  </div>

  <div class="grid lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Cover Image -->
      <% if @article.cover_image.attached? %>
        <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg overflow-hidden">
          <%= image_tag @article.cover_image, class: "w-full" %>
        </div>
      <% end %>

      <!-- Content -->
      <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg p-6">
        <h3 class="text-sm font-medium text-zinc-500 dark:text-zinc-400 uppercase tracking-wider mb-4">Контент</h3>
        <div class="prose dark:prose-invert max-w-none">
          <%= simple_format(@article.content) %>
        </div>
      </div>

      <!-- Excerpt -->
      <% if @article.excerpt.present? %>
        <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg p-6">
          <h3 class="text-sm font-medium text-zinc-500 dark:text-zinc-400 uppercase tracking-wider mb-4">Краткое описание</h3>
          <p class="text-zinc-700 dark:text-zinc-300"><%= @article.excerpt %></p>
        </div>
      <% end %>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Status & Actions -->
      <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg p-6">
        <h3 class="text-sm font-medium text-zinc-500 dark:text-zinc-400 uppercase tracking-wider mb-4">Статус</h3>
        <div class="space-y-4">
          <div class="flex items-center justify-between">
            <span class="text-zinc-700 dark:text-zinc-300">Статус:</span>
            <% if @article.published? %>
              <span class="px-3 py-1 text-sm font-medium rounded-full bg-green-100 text-green-700 dark:bg-green-900/30 dark:text-green-400">
                Опубликовано
              </span>
            <% else %>
              <span class="px-3 py-1 text-sm font-medium rounded-full bg-zinc-100 text-zinc-700 dark:bg-zinc-800 dark:text-zinc-300">
                Черновик
              </span>
            <% end %>
          </div>

          <% if @article.published? && @article.published_at %>
            <div class="flex items-center justify-between">
              <span class="text-zinc-700 dark:text-zinc-300">Опубликовано:</span>
              <span class="text-zinc-500 dark:text-zinc-400"><%= @article.published_at.strftime("%d.%m.%Y %H:%M") %></span>
            </div>
          <% end %>

          <div class="flex items-center justify-between">
            <span class="text-zinc-700 dark:text-zinc-300">Просмотры:</span>
            <span class="text-zinc-500 dark:text-zinc-400"><%= number_with_delimiter(@article.views_count) %></span>
          </div>

          <% if @article.reading_time.present? %>
            <div class="flex items-center justify-between">
              <span class="text-zinc-700 dark:text-zinc-300">Время чтения:</span>
              <span class="text-zinc-500 dark:text-zinc-400"><%= @article.reading_time %> мин</span>
            </div>
          <% end %>
        </div>

        <div class="mt-6 pt-6 border-t border-zinc-200 dark:border-zinc-800">
          <% if @article.published? %>
            <%= link_to article_path(@article), target: "_blank", class: "w-full inline-flex items-center justify-center gap-2 px-4 py-2 bg-zinc-100 dark:bg-zinc-800 text-zinc-700 dark:text-zinc-300 rounded-lg hover:bg-zinc-200 dark:hover:bg-zinc-700 transition-colors" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
              </svg>
              Открыть на сайте
            <% end %>
          <% end %>
        </div>
      </div>

      <!-- Meta -->
      <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg p-6">
        <h3 class="text-sm font-medium text-zinc-500 dark:text-zinc-400 uppercase tracking-wider mb-4">Информация</h3>
        <div class="space-y-4 text-sm">
          <div>
            <span class="text-zinc-500 dark:text-zinc-400">Slug:</span>
            <p class="text-zinc-700 dark:text-zinc-300 font-mono">/<%= @article.slug %></p>
          </div>

          <% if @article.category.present? %>
            <div>
              <span class="text-zinc-500 dark:text-zinc-400">Категория:</span>
              <p class="text-zinc-700 dark:text-zinc-300"><%= @article.category.titleize %></p>
            </div>
          <% end %>

          <div>
            <span class="text-zinc-500 dark:text-zinc-400">Автор:</span>
            <p class="text-zinc-700 dark:text-zinc-300"><%= @article.author.email %></p>
          </div>

          <div>
            <span class="text-zinc-500 dark:text-zinc-400">Создано:</span>
            <p class="text-zinc-700 dark:text-zinc-300"><%= @article.created_at.strftime("%d.%m.%Y %H:%M") %></p>
          </div>

          <div>
            <span class="text-zinc-500 dark:text-zinc-400">Обновлено:</span>
            <p class="text-zinc-700 dark:text-zinc-300"><%= @article.updated_at.strftime("%d.%m.%Y %H:%M") %></p>
          </div>
        </div>
      </div>

      <!-- SEO -->
      <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg p-6">
        <h3 class="text-sm font-medium text-zinc-500 dark:text-zinc-400 uppercase tracking-wider mb-4">SEO</h3>
        <div class="space-y-4 text-sm">
          <div>
            <span class="text-zinc-500 dark:text-zinc-400">Meta Title:</span>
            <p class="text-zinc-700 dark:text-zinc-300"><%= @article.meta_title.presence || '—' %></p>
          </div>

          <div>
            <span class="text-zinc-500 dark:text-zinc-400">Meta Description:</span>
            <p class="text-zinc-700 dark:text-zinc-300"><%= @article.meta_description.presence || '—' %></p>
          </div>

          <% if @article.tags.present? && @article.tags.any? %>
            <div>
              <span class="text-zinc-500 dark:text-zinc-400">Теги:</span>
              <div class="flex flex-wrap gap-1 mt-1">
                <% @article.tags.each do |tag| %>
                  <span class="px-2 py-0.5 text-xs bg-zinc-100 dark:bg-zinc-800 rounded">#<%= tag %></span>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Danger Zone -->
      <div class="bg-red-50 dark:bg-red-900/10 border border-red-200 dark:border-red-800 rounded-lg p-6">
        <h3 class="text-sm font-medium text-red-700 dark:text-red-400 uppercase tracking-wider mb-4">Опасная зона</h3>
        <%= button_to "Удалить статью", admin_article_path(@article), method: :delete, data: { turbo_confirm: "Вы уверены, что хотите удалить эту статью? Это действие необратимо." }, class: "w-full px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors" %>
      </div>
    </div>
  </div>
</div>
