<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <div class="flex items-center gap-2 text-sm text-zinc-500 dark:text-zinc-400 mb-2">
        <%= link_to "Статьи", admin_articles_path, class: "hover:text-primary-600" %>
        <span>/</span>
        <%= link_to @article.title.truncate(30), admin_article_path(@article), class: "hover:text-primary-600" %>
        <span>/</span>
        <span>Редактирование</span>
      </div>
      <h2 class="text-3xl font-bold text-zinc-900 dark:text-zinc-50">Редактирование статьи</h2>
    </div>
    <div class="flex items-center gap-3">
      <% if @article.published? %>
        <%= link_to article_path(@article), target: "_blank", class: "inline-flex items-center gap-2 px-4 py-2 bg-zinc-100 dark:bg-zinc-800 text-zinc-700 dark:text-zinc-300 rounded-lg hover:bg-zinc-200 dark:hover:bg-zinc-700 transition-colors" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
          </svg>
          На сайте
        <% end %>
      <% end %>
    </div>
  </div>

  <%= render 'form', article: @article %>
</div>
