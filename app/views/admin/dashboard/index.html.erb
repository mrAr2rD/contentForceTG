<div class="space-y-8">
  <div>
    <h2 class="text-3xl font-bold text-zinc-900 dark:text-zinc-50">Dashboard</h2>
    <p class="mt-2 text-zinc-600 dark:text-zinc-400">Overview of your ContentForce application</p>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-zinc-500 dark:text-zinc-400">Users</p>
          <p class="text-3xl font-bold text-zinc-900 dark:text-zinc-50 mt-2"><%= @users_count %></p>
        </div>
        <div class="w-12 h-12 bg-primary-100 dark:bg-primary-900/20 rounded-full flex items-center justify-center">
          <svg class="w-6 h-6 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-zinc-500 dark:text-zinc-400">Projects</p>
          <p class="text-3xl font-bold text-zinc-900 dark:text-zinc-50 mt-2"><%= @projects_count %></p>
        </div>
        <div class="w-12 h-12 bg-green-100 dark:bg-green-900/20 rounded-full flex items-center justify-center">
          <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-zinc-500 dark:text-zinc-400">Posts</p>
          <p class="text-3xl font-bold text-zinc-900 dark:text-zinc-50 mt-2"><%= @posts_count %></p>
        </div>
        <div class="w-12 h-12 bg-purple-100 dark:bg-purple-900/20 rounded-full flex items-center justify-center">
          <svg class="w-6 h-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-zinc-500 dark:text-zinc-400">Bots</p>
          <p class="text-3xl font-bold text-zinc-900 dark:text-zinc-50 mt-2"><%= @telegram_bots_count %></p>
        </div>
        <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900/20 rounded-full flex items-center justify-center">
          <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- ROI Widget -->
  <% if @roi_error %>
  <div class="bg-amber-50 dark:bg-amber-900/20 border border-amber-200 dark:border-amber-800 rounded-lg p-4">
    <div class="flex items-center gap-3">
      <svg class="w-5 h-5 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
      </svg>
      <p class="text-sm text-amber-800 dark:text-amber-200"><%= @roi_error %></p>
    </div>
  </div>
  <% elsif @roi_summary %>
  <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg p-6">
    <div class="flex items-center justify-between mb-4">
      <div class="flex items-center gap-2">
        <h3 class="text-lg font-semibold text-zinc-900 dark:text-zinc-50">ROI за 30 дней</h3>
        <% if @roi_summary[:migrations_pending] %>
          <span class="px-2 py-0.5 text-xs font-medium bg-amber-100 text-amber-700 dark:bg-amber-900/30 dark:text-amber-400 rounded">Миграции ожидают</span>
        <% end %>
      </div>
      <%= link_to admin_roi_path, class: "text-sm text-primary-600 dark:text-primary-400 hover:underline" do %>
        Подробнее →
      <% end %>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <div class="text-center">
        <p class="text-sm text-zinc-500 dark:text-zinc-400">Расходы AI</p>
        <p class="text-xl font-bold text-zinc-900 dark:text-zinc-50"><%= number_with_delimiter(@roi_summary[:ai_costs][:total_rub].to_i) %> ₽</p>
      </div>
      <div class="text-center">
        <p class="text-sm text-zinc-500 dark:text-zinc-400">Доходы</p>
        <p class="text-xl font-bold text-zinc-900 dark:text-zinc-50"><%= number_with_delimiter(@roi_summary[:revenue][:total].to_i) %> ₽</p>
      </div>
      <div class="text-center">
        <p class="text-sm text-zinc-500 dark:text-zinc-400">Прибыль</p>
        <p class="text-xl font-bold <%= @roi_summary[:roi][:profitable] ? 'text-green-600 dark:text-green-400' : 'text-red-600 dark:text-red-400' %>">
          <%= @roi_summary[:roi][:profit] >= 0 ? '+' : '' %><%= number_with_delimiter(@roi_summary[:roi][:profit].to_i) %> ₽
        </p>
      </div>
      <div class="text-center">
        <p class="text-sm text-zinc-500 dark:text-zinc-400">ROI</p>
        <p class="text-xl font-bold text-zinc-900 dark:text-zinc-50">
          <% if @roi_summary[:roi][:roi_percent] == Float::INFINITY %>∞<% else %><%= @roi_summary[:roi][:roi_percent] %>%<% end %>
        </p>
      </div>
    </div>
  </div>
  <% end %>

  <!-- Extended Stats -->
  <% if @post_analytics || @channel_metrics || @ai_usage %>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <% if @post_analytics %>
    <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-sm font-semibold text-zinc-900 dark:text-zinc-50">Аналитика постов</h3>
        <span class="text-xs text-zinc-500 dark:text-zinc-400">За всё время</span>
      </div>
      <div class="space-y-3">
        <div class="flex justify-between items-center">
          <span class="text-sm text-zinc-500 dark:text-zinc-400">Всего просмотров</span>
          <span class="text-sm font-medium text-zinc-900 dark:text-zinc-50"><%= number_with_delimiter(@post_analytics[:total_views]) %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-zinc-500 dark:text-zinc-400">Репостов</span>
          <span class="text-sm font-medium text-zinc-900 dark:text-zinc-50"><%= number_with_delimiter(@post_analytics[:total_forwards]) %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-zinc-500 dark:text-zinc-400">Среднее просмотров</span>
          <span class="text-sm font-medium text-zinc-900 dark:text-zinc-50"><%= @post_analytics[:average_views] %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-zinc-500 dark:text-zinc-400">Опубликовано</span>
          <span class="text-sm font-medium text-green-600 dark:text-green-400"><%= @post_analytics[:published_posts] %></span>
        </div>
      </div>
    </div>
    <% end %>

    <% if @channel_metrics %>
    <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-sm font-semibold text-zinc-900 dark:text-zinc-50">Метрики каналов</h3>
        <span class="text-xs text-zinc-500 dark:text-zinc-400">30 дней</span>
      </div>
      <div class="space-y-3">
        <div class="flex justify-between items-center">
          <span class="text-sm text-zinc-500 dark:text-zinc-400">Всего подписчиков</span>
          <span class="text-sm font-medium text-zinc-900 dark:text-zinc-50"><%= number_with_delimiter(@channel_metrics[:total_subscribers]) %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-zinc-500 dark:text-zinc-400">Прирост за месяц</span>
          <span class="text-sm font-medium <%= @channel_metrics[:total_growth] >= 0 ? 'text-green-600 dark:text-green-400' : 'text-red-600 dark:text-red-400' %>">
            <%= @channel_metrics[:total_growth] >= 0 ? '+' : '' %><%= number_with_delimiter(@channel_metrics[:total_growth]) %>
          </span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-zinc-500 dark:text-zinc-400">Средний отток</span>
          <span class="text-sm font-medium text-zinc-900 dark:text-zinc-50"><%= @channel_metrics[:average_churn] %>%</span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-zinc-500 dark:text-zinc-400">Активных ботов</span>
          <span class="text-sm font-medium text-primary-600 dark:text-primary-400"><%= @channel_metrics[:active_bots] %></span>
        </div>
      </div>
    </div>
    <% end %>

    <% if @ai_usage %>
    <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg p-6">
      <div class="flex items-center justify-between mb-4">
        <h3 class="text-sm font-semibold text-zinc-900 dark:text-zinc-50">AI использование</h3>
        <%= link_to 'Подробнее →', admin_ai_usage_logs_path, class: "text-xs text-primary-600 dark:text-primary-400 hover:underline" %>
      </div>
      <div class="space-y-3">
        <div class="flex justify-between items-center">
          <span class="text-sm text-zinc-500 dark:text-zinc-400">Всего запросов</span>
          <span class="text-sm font-medium text-zinc-900 dark:text-zinc-50"><%= number_with_delimiter(@ai_usage[:total_requests]) %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-zinc-500 dark:text-zinc-400">За сегодня</span>
          <span class="text-sm font-medium text-zinc-900 dark:text-zinc-50"><%= number_with_delimiter(@ai_usage[:requests_today]) %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-zinc-500 dark:text-zinc-400">Токенов использовано</span>
          <span class="text-sm font-medium text-zinc-900 dark:text-zinc-50"><%= number_with_delimiter(@ai_usage[:total_tokens]) %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-zinc-500 dark:text-zinc-400">Общая стоимость</span>
          <span class="text-sm font-medium text-green-600 dark:text-green-400">$<%= number_with_precision(@ai_usage[:total_cost], precision: 4) %></span>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <% end %>

  <!-- Quick Actions Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
    <!-- AI Настройки -->
    <div class="bg-gradient-to-br from-primary-600 to-primary-700 dark:from-primary-500 dark:to-primary-600 rounded-lg p-4">
      <h3 class="text-sm font-semibold text-white mb-1">AI Настройки</h3>
      <p class="text-xs text-primary-100 mb-3">OpenRouter API</p>
      <%= link_to 'Настроить', edit_admin_ai_settings_path, class: "inline-flex items-center text-xs font-medium text-white hover:underline" %>
    </div>

    <!-- Тарифы -->
    <div class="bg-gradient-to-br from-green-600 to-green-700 dark:from-green-500 dark:to-green-600 rounded-lg p-4">
      <h3 class="text-sm font-semibold text-white mb-1">Тарифы</h3>
      <p class="text-xs text-green-100 mb-3">Цены и лимиты</p>
      <%= link_to 'Управление', admin_plans_path, class: "inline-flex items-center text-xs font-medium text-white hover:underline" %>
    </div>

    <!-- AI Модели -->
    <div class="bg-gradient-to-br from-purple-600 to-purple-700 dark:from-purple-500 dark:to-purple-600 rounded-lg p-4">
      <h3 class="text-sm font-semibold text-white mb-1">AI Модели</h3>
      <p class="text-xs text-purple-100 mb-3">Цены токенов</p>
      <%= link_to 'Управление', admin_ai_models_path, class: "inline-flex items-center text-xs font-medium text-white hover:underline" %>
    </div>

    <!-- Уведомления -->
    <div class="bg-gradient-to-br from-blue-600 to-blue-700 dark:from-blue-500 dark:to-blue-600 rounded-lg p-4">
      <h3 class="text-sm font-semibold text-white mb-1">Уведомления</h3>
      <p class="text-xs text-blue-100 mb-3">Шаблоны сообщений</p>
      <%= link_to 'Управление', admin_notification_templates_path, class: "inline-flex items-center text-xs font-medium text-white hover:underline" %>
    </div>
  </div>

  <!-- Recent Activity -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg p-6">
      <h3 class="text-lg font-semibold text-zinc-900 dark:text-zinc-50 mb-4">Recent Users</h3>
      <div class="space-y-3">
        <% @recent_users.each do |user| %>
          <div class="flex items-center justify-between py-2">
            <div>
              <p class="text-sm font-medium text-zinc-900 dark:text-zinc-50"><%= user.email %></p>
              <p class="text-xs text-zinc-500 dark:text-zinc-400"><%= user.role.humanize %></p>
            </div>
            <span class="text-xs text-zinc-400 dark:text-zinc-500"><%= time_ago_in_words(user.created_at) %> ago</span>
          </div>
        <% end %>
      </div>
      <%= link_to "View all users →", admin_users_path, class: "text-sm text-primary-600 dark:text-primary-400 hover:underline mt-4 inline-block" %>
    </div>

    <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg p-6">
      <h3 class="text-lg font-semibold text-zinc-900 dark:text-zinc-50 mb-4">Recent Posts</h3>
      <div class="space-y-3">
        <% @recent_posts.each do |post| %>
          <div class="flex items-center justify-between py-2">
            <div>
              <p class="text-sm font-medium text-zinc-900 dark:text-zinc-50"><%= post.title.presence || "Untitled" %></p>
              <p class="text-xs text-zinc-500 dark:text-zinc-400">by <%= post.user.email %></p>
            </div>
            <span class="px-2 py-1 text-xs font-medium rounded <%= post.status == 'published' ? 'bg-green-100 text-green-700 dark:bg-green-900/20 dark:text-green-400' : 'bg-zinc-100 text-zinc-700 dark:bg-zinc-800 dark:text-zinc-300' %>">
              <%= post.status %>
            </span>
          </div>
        <% end %>
      </div>
      <%= link_to "View all posts →", admin_posts_path, class: "text-sm text-primary-600 dark:text-primary-400 hover:underline mt-4 inline-block" %>
    </div>
  </div>
</div>
