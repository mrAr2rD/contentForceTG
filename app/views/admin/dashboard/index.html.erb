<div class="space-y-8">
  <div>
    <h2 class="text-3xl font-bold text-zinc-900 dark:text-zinc-50">Dashboard</h2>
    <p class="mt-2 text-zinc-600 dark:text-zinc-400">Overview of your ContentForce application</p>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-zinc-500 dark:text-zinc-400">Users</p>
          <p class="text-3xl font-bold text-zinc-900 dark:text-zinc-50 mt-2"><%= @users_count %></p>
        </div>
        <div class="w-12 h-12 bg-primary-100 dark:bg-primary-900/20 rounded-full flex items-center justify-center">
          <svg class="w-6 h-6 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-zinc-500 dark:text-zinc-400">Projects</p>
          <p class="text-3xl font-bold text-zinc-900 dark:text-zinc-50 mt-2"><%= @projects_count %></p>
        </div>
        <div class="w-12 h-12 bg-green-100 dark:bg-green-900/20 rounded-full flex items-center justify-center">
          <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-zinc-500 dark:text-zinc-400">Posts</p>
          <p class="text-3xl font-bold text-zinc-900 dark:text-zinc-50 mt-2"><%= @posts_count %></p>
        </div>
        <div class="w-12 h-12 bg-purple-100 dark:bg-purple-900/20 rounded-full flex items-center justify-center">
          <svg class="w-6 h-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-zinc-500 dark:text-zinc-400">Bots</p>
          <p class="text-3xl font-bold text-zinc-900 dark:text-zinc-50 mt-2"><%= @telegram_bots_count %></p>
        </div>
        <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900/20 rounded-full flex items-center justify-center">
          <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="bg-gradient-to-r from-primary-600 to-primary-700 dark:from-primary-500 dark:to-primary-600 border border-primary-700 dark:border-primary-600 rounded-lg p-6">
    <div class="flex items-center justify-between">
      <div>
        <h3 class="text-lg font-semibold text-white mb-2 flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z"/>
          </svg>
          AI Настройки
        </h3>
        <p class="text-sm text-primary-100">Настройте OpenRouter API и глобальные параметры AI</p>
      </div>
      <%= link_to edit_admin_ai_settings_path, class: "inline-flex items-center gap-2 px-4 py-2 bg-white text-primary-700 rounded-lg text-sm font-semibold hover:bg-primary-50 transition-colors" do %>
        Настроить
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
        </svg>
      <% end %>
    </div>
  </div>

  <!-- Recent Activity -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg p-6">
      <h3 class="text-lg font-semibold text-zinc-900 dark:text-zinc-50 mb-4">Recent Users</h3>
      <div class="space-y-3">
        <% @recent_users.each do |user| %>
          <div class="flex items-center justify-between py-2">
            <div>
              <p class="text-sm font-medium text-zinc-900 dark:text-zinc-50"><%= user.email %></p>
              <p class="text-xs text-zinc-500 dark:text-zinc-400"><%= user.role.humanize %></p>
            </div>
            <span class="text-xs text-zinc-400 dark:text-zinc-500"><%= time_ago_in_words(user.created_at) %> ago</span>
          </div>
        <% end %>
      </div>
      <%= link_to "View all users →", admin_users_path, class: "text-sm text-primary-600 dark:text-primary-400 hover:underline mt-4 inline-block" %>
    </div>

    <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg p-6">
      <h3 class="text-lg font-semibold text-zinc-900 dark:text-zinc-50 mb-4">Recent Posts</h3>
      <div class="space-y-3">
        <% @recent_posts.each do |post| %>
          <div class="flex items-center justify-between py-2">
            <div>
              <p class="text-sm font-medium text-zinc-900 dark:text-zinc-50"><%= post.title.presence || "Untitled" %></p>
              <p class="text-xs text-zinc-500 dark:text-zinc-400">by <%= post.user.email %></p>
            </div>
            <span class="px-2 py-1 text-xs font-medium rounded <%= post.status == 'published' ? 'bg-green-100 text-green-700 dark:bg-green-900/20 dark:text-green-400' : 'bg-zinc-100 text-zinc-700 dark:bg-zinc-800 dark:text-zinc-300' %>">
              <%= post.status %>
            </span>
          </div>
        <% end %>
      </div>
      <%= link_to "View all posts →", admin_posts_path, class: "text-sm text-primary-600 dark:text-primary-400 hover:underline mt-4 inline-block" %>
    </div>
  </div>
</div>
