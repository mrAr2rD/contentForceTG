<%# Стандартный заголовок страницы дашборда %>
<%# Параметры: title (обязательный), subtitle (опциональный), actions (блок, опциональный) %>
<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-8">
  <div>
    <h1 class="text-2xl font-bold text-zinc-900 dark:text-zinc-50"><%= title %></h1>
    <% if local_assigns[:subtitle] %>
      <p class="text-sm text-zinc-500 dark:text-zinc-400 mt-1"><%= subtitle %></p>
    <% end %>
  </div>
  <% if local_assigns[:actions] %>
    <div class="flex items-center gap-3">
      <%= actions %>
    </div>
  <% end %>
</div>
