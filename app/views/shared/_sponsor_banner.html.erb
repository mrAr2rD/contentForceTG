<%
  # Получаем активный баннер
  banner = SponsorBanner.current
%>

<% if banner.present? %>
  <!-- Floating Sponsor Banner -->
  <div
    data-controller="sponsor-banner"
    data-sponsor-banner-banner-id-value="<%= banner.id %>"
    class="fixed bottom-4 right-4 bg-zinc-900 border border-zinc-700 rounded-xl shadow-2xl max-w-sm z-50 opacity-0 translate-y-4 transition-all duration-300 ease-out"
  >
    <!-- Кнопка закрытия -->
    <button
      data-action="click->sponsor-banner#close"
      class="absolute top-2 right-2 text-zinc-400 hover:text-zinc-100 transition-colors p-1 rounded-lg hover:bg-zinc-800"
      aria-label="Закрыть баннер"
    >
      <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>

    <!-- Контент баннера (вся карточка кликабельная) -->
    <%= link_to banner.url, target: "_blank", rel: "noopener noreferrer", class: "block p-4 pr-10" do %>
      <div class="flex items-start gap-4">
        <!-- Иконка/Логотип -->
        <div class="flex-shrink-0">
          <% if banner.icon.attached? %>
            <%= image_tag banner.icon, class: "w-12 h-12 rounded-lg object-cover border border-zinc-700", alt: banner.title %>
          <% else %>
            <!-- Дефолтная иконка если нет загруженной -->
            <div class="w-12 h-12 bg-zinc-800 rounded-lg flex items-center justify-center border border-zinc-700">
              <svg class="h-6 w-6 text-zinc-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
          <% end %>
        </div>

        <!-- Текст -->
        <div class="flex-1 min-w-0">
          <div class="flex items-center gap-2 mb-1">
            <h3 class="text-sm font-semibold text-zinc-50 truncate"><%= banner.title %></h3>
            <span class="px-2 py-0.5 text-xs font-medium bg-yellow-500/10 text-yellow-500 rounded-full whitespace-nowrap">
              Спонсор
            </span>
          </div>

          <% if banner.description.present? %>
            <p class="text-xs text-zinc-400 line-clamp-2"><%= banner.description %></p>
          <% end %>
        </div>

        <!-- Стрелка -->
        <div class="flex-shrink-0 mt-1">
          <svg class="h-5 w-5 text-zinc-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
