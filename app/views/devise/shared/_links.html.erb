<div class="space-y-2">
  <%- if controller_name != 'sessions' %>
    <%= link_to "Войти", new_session_path(resource_name), class: "text-blue-600 hover:text-blue-700 font-medium" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <% if controller_name == 'sessions' %>
      <span class="text-slate-500">Нет аккаунта?</span>
    <% end %>
    <%= link_to "Зарегистрироваться", new_registration_path(resource_name), class: "text-blue-600 hover:text-blue-700 font-medium" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div>
      <%= link_to "Забыли пароль?", new_password_path(resource_name), class: "text-slate-600 hover:text-slate-900" %>
    </div>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div>
      <%= link_to "Не получили письмо с подтверждением?", new_confirmation_path(resource_name), class: "text-slate-600 hover:text-slate-900" %>
    </div>
  <% end %>
</div>
