          <button data-action="click->sidebar#openMobile" class="p-2 text-[#71717A] hover:text-[#00D4AA] hover:bg-[#00D4AA]/10 rounded-lg transition-all">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
          </button>
          <div class="flex items-center gap-2">
            <div class="w-7 h-7 rounded-lg bg-gradient-to-br from-[#00D4AA] to-[#00A896] flex items-center justify-center shadow-lg">
              <span class="text-[#0A0A0B] text-xs font-bold">CF</span>
            </div>
            <span class="text-sm font-semibold text-[#FAFAFA]">ContentForce</span>
          </div>
          <div class="w-10"></div>
        </div>

        <!-- Top Bar (optional, for breadcrumbs or actions) -->
        <% if content_for?(:top_bar) %>
          <div class="h-14 px-4 lg:px-6 border-b border-[#27272A] flex items-center justify-between bg-[#0A0A0B]">
            <%= yield :top_bar %>
          </div>
        <% end %>

        <!-- Flash Messages -->
        <% if notice.present? %>
          <div class="mx-4 lg:mx-6 mt-4">
            <div class="flex items-center gap-3 px-4 py-3 bg-[#00D4AA]/10 border border-[#00D4AA]/30 rounded-xl">
              <div class="w-8 h-8 rounded-lg bg-[#00D4AA]/20 flex items-center justify-center">
                <svg class="w-4 h-4 text-[#00D4AA]" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <p class="text-sm font-medium text-[#00D4AA]"><%= notice %></p>
            </div>
          </div>
        <% end %>

        <% if alert.present? %>
          <div class="mx-4 lg:mx-6 mt-4">
            <div class="flex items-center gap-3 px-4 py-3 bg-red-500/10 border border-red-500/30 rounded-xl">
              <div class="w-8 h-8 rounded-lg bg-red-500/20 flex items-center justify-center">
                <svg class="w-4 h-4 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <p class="text-sm font-medium text-red-400"><%= alert %></p>
            </div>
          </div>
        <% end %>

        <!-- Page Content -->
        <main class="flex-1 overflow-y-auto tech-scrollbar bg-[#0A0A0B]" data-sidebar-target="content">
          <%= yield %>
        </main>
      </div>
    </div>
  </body>
</html>
