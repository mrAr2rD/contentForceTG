<div class="w-full max-w-2xl mx-auto" data-controller="onboarding-wizard">
  <!-- Progress bar -->
  <%= render "onboarding/progress_bar", step_index: @step_index, total_steps: @total_steps %>

  <!-- Step content -->
  <div id="onboarding_content">
    <%= render "onboarding/step_#{@step}",
               step: @step,
               step_index: @step_index,
               total_steps: @total_steps,
               onboarding_data: @onboarding_data %>
  </div>
</div>
