<div id="onboarding_progress" class="flex items-center justify-center gap-3 mb-12">
  <% total_steps.times do |i| %>
    <div class="progress-dot <%= i < step_index ? 'completed' : '' %> <%= i == step_index ? 'active' : '' %>"></div>
    <% if i < total_steps - 1 %>
      <div class="w-12 h-px <%= i < step_index ? 'bg-[#00D4AA]' : 'bg-[#27272A]' %> transition-colors duration-300"></div>
    <% end %>
  <% end %>
</div>
