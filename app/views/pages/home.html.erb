<style>
  .landing-page {
    --accent: #00D4AA;
    --accent-hover: #00E5BB;
    --accent-dim: #00D4AA20;
    --bg-dark: #0A0A0B;
    --bg-card: #111113;
    --bg-elevated: #1A1A1D;
    --text-primary: #FAFAFA;
