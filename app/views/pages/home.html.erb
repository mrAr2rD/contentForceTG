  }

  .nav-link {
    position: relative;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background: var(--accent);
    transition: width 0.3s ease;
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .btn-primary {
    background: var(--accent);
    color: var(--bg-dark);
    transition: all 0.3s ease;
  }

  .btn-primary:hover {
    background: var(--accent-hover);
    box-shadow: 0 0 30px rgba(0, 212, 170, 0.4);
    transform: translateY(-2px);
  }

  .btn-outline {
    border: 1px solid var(--border);
    color: var(--text-primary);
    transition: all 0.3s ease;
  }

  .btn-outline:hover {
    border-color: var(--accent);
    color: var(--accent);
    background: rgba(0, 212, 170, 0.05);
  }

  .pricing-card {
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .pricing-card:hover {
    transform: scale(1.02);
  }

  .pricing-card.featured {
    border-color: var(--accent);
    box-shadow: 0 0 60px rgba(0, 212, 170, 0.15);
  }

  /* Demo Animation Styles */
  .demo-container {
    perspective: 1000px;
  }

  .demo-message {
    animation: message-appear 0.5s ease-out forwards;
  }

  .demo-message.sending {
    animation: fly-to-channel 1.5s ease-in-out forwards;
  }

  .typing-indicator span {
    display: inline-block;
    width: 6px;
    height: 6px;
    background: var(--accent);
    border-radius: 50%;
    margin: 0 2px;
  }

  .typing-indicator span:nth-child(1) { animation: typing-dots 1s ease-in-out infinite 0s; }
  .typing-indicator span:nth-child(2) { animation: typing-dots 1s ease-in-out infinite 0.2s; }
  .typing-indicator span:nth-child(3) { animation: typing-dots 1s ease-in-out infinite 0.4s; }

  .channel-card.receiving {
    animation: channel-pulse 1s ease-out;
  }

  .step-connector {
    position: relative;
  }

  .step-connector::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 100%;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, var(--accent), transparent);
    transform: translateY(-50%);
  }

  /* Scroll reveal */
  .reveal {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .reveal.visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* FAQ Accordion */
  .faq-item {
    transition: all 0.3s ease;
  }

  .faq-item:hover {
    border-color: var(--accent);
