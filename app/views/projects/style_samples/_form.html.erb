<% sample ||= project.style_samples.build %>

<%= form_with model: sample, url: project_style_samples_path(project), method: :post, data: { turbo_frame: "_top" } do |f| %>
  <div class="space-y-4">
    <% if sample.errors.any? %>
      <div class="p-4 bg-red-50 dark:bg-red-950/30 border border-red-200 dark:border-red-900/50 rounded-xl">
        <div class="flex gap-3">
          <svg class="w-5 h-5 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <ul class="text-sm text-red-600 dark:text-red-400 space-y-1">
            <% sample.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <div>
      <%= f.text_area :content,
                      placeholder: "Вставьте пример текста в вашем стиле (минимум 50 символов)...\n\nНапример, один из ваших постов или текст, который хорошо отражает ваш авторский стиль.",
                      rows: 5,
                      class: "w-full px-4 py-3 border border-zinc-300 dark:border-zinc-700 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-transparent dark:bg-zinc-800 dark:text-white resize-none text-sm transition-all placeholder:text-zinc-400 dark:placeholder:text-zinc-500" %>
    </div>

    <div class="flex items-center justify-between">
      <p class="text-xs text-zinc-500 dark:text-zinc-400">Минимум 50 символов</p>
      <button type="submit" class="inline-flex items-center gap-2 px-4 py-2 bg-primary-500 hover:bg-primary-600 text-white rounded-lg text-sm font-medium transition-colors shadow-sm hover:shadow">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Добавить пример
      </button>
    </div>
  </div>
<% end %>
