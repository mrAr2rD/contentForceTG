<% sample ||= project.style_samples.build %>

<%= form_with model: sample, url: project_style_samples_path(project), method: :post, data: { turbo_frame: "_top" } do |f| %>
  <div class="space-y-4">
    <% if sample.errors.any? %>
      <div class="p-3 bg-red-50 dark:bg-red-900/30 border border-red-200 dark:border-red-800 rounded-lg">
        <ul class="text-sm text-red-600 dark:text-red-400 list-disc list-inside">
          <% sample.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.text_area :content,
                      placeholder: "Вставьте пример текста в вашем стиле (минимум 50 символов)...",
                      rows: 4,
                      class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-700 dark:text-white resize-none" %>
    </div>

    <div class="flex justify-end">
      <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
        Добавить пример
      </button>
    </div>
  </div>
<% end %>
