<div class="max-w-7xl mx-auto px-8 py-8">
  <!-- Header -->
  <div class="mb-6">
    <%= link_to projects_path, class: "inline-flex items-center gap-2 text-xs text-muted-foreground hover:text-foreground mb-3 transition-colors" do %>
      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"/>
      </svg>
      Назад к проектам
    <% end %>

    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-xl font-semibold text-foreground"><%= @project.name %></h1>
        <p class="text-xs text-muted-foreground mt-1"><%= @project.description.presence || "Без описания" %></p>
      </div>
      <div class="flex items-center gap-2">
        <%= link_to edit_project_path(@project), class: "inline-flex h-9 items-center justify-center rounded-md border border-input bg-background px-3 py-2 text-xs font-medium ring-offset-background transition-colors hover:bg-accent hover:text-accent-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2" do %>
          Редактировать
        <% end %>
        <%= link_to new_project_post_path(@project), class: "inline-flex h-9 items-center justify-center rounded-md bg-primary px-3 py-2 text-xs font-semibold text-primary-foreground ring-offset-background transition-colors hover:bg-primary/90 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2" do %>
          Новый пост
        <% end %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-4">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-4">
      <!-- Telegram Bots -->
      <div class="bg-card border border-border rounded-lg">
        <div class="p-4 border-b border-border flex items-center justify-between">
          <h2 class="text-sm font-semibold text-foreground">Telegram боты</h2>
          <%= link_to new_project_telegram_bot_path(@project), class: "text-xs font-medium text-muted-foreground hover:text-foreground transition-colors" do %>
            + Добавить
          <% end %>
        </div>

        <% if @telegram_bots.any? %>
          <div class="divide-y divide-border">
            <% @telegram_bots.each do |bot| %>
              <%= link_to project_telegram_bot_path(@project, bot), class: "flex items-center gap-3 p-4 hover:bg-accent transition-colors" do %>
                <div class="w-8 h-8 bg-muted rounded flex items-center justify-center">
                  <svg class="w-4 h-4 text-muted-foreground" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm5.562 8.161c-.18.717-.962 3.767-1.362 5.001-.168.52-.504.694-.826.71-.702.033-1.235-.464-1.913-.908-1.061-.695-1.662-1.127-2.693-1.805-.119-.078-.238-.158-.356-.239a.734.734 0 01.05-1.171c.294-.24 2.661-2.426 2.661-2.426s.172-.177.161-.284a.316.316 0 00-.189-.238 1.02 1.02 0 00-.373-.05c-.177.011-2.986 1.897-8.428 5.571-.797.548-1.52.815-2.165.801-.713-.016-2.082-.403-3.104-.736-.125-.041-.247-.081-.364-.121a.722.722 0 01-.437-.873c.056-.148.146-.258.256-.354.851-.748 8.666-3.758 10.818-4.677 5.112-2.186 6.184-2.568 6.876-2.58.153-.002.495.035.716.214.186.149.238.351.263.494.024.143.056.466.032.72z"/>
                  </svg>
                </div>
                <div class="flex-1 min-w-0">
                  <h4 class="text-sm font-medium text-foreground truncate">@<%= bot.bot_username %></h4>
                  <p class="text-xs text-muted-foreground truncate"><%= bot.channel_name.presence || bot.channel_id %></p>
                </div>
                <% if bot.verified? %>
                  <span class="px-2 py-0.5 bg-green-50 text-green-700 text-xs font-medium rounded">Подключен</span>
                <% else %>
                  <%= button_to verify_project_telegram_bot_path(@project, bot), method: :post, class: "px-2 py-0.5 bg-yellow-50 text-yellow-700 text-xs font-medium rounded hover:bg-yellow-100 transition-colors", form: { class: "inline" } do %>
                    Проверить
                  <% end %>
                <% end %>
              <% end %>
            <% end %>
          </div>
        <% else %>
          <div class="p-8 text-center">
            <p class="text-xs text-muted-foreground mb-3">Нет подключенных ботов</p>
            <%= link_to new_project_telegram_bot_path(@project), class: "text-xs font-medium text-muted-foreground hover:text-foreground transition-colors" do %>
              Подключить первого бота →
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Recent Posts -->
      <div class="bg-card border border-border rounded-lg">
        <div class="p-4 border-b border-border flex items-center justify-between">
          <h2 class="text-sm font-semibold text-foreground">Последние посты</h2>
          <%= link_to posts_path(project_id: @project.id), class: "text-xs font-medium text-muted-foreground hover:text-foreground transition-colors" do %>
            Все посты →
          <% end %>
        </div>

        <% if @recent_posts.any? %>
          <div class="divide-y divide-border">
            <% @recent_posts.each do |post| %>
              <%= link_to post_path(post), class: "flex items-center gap-3 p-4 hover:bg-accent transition-colors" do %>
                <div class="w-8 h-8 bg-muted rounded flex items-center justify-center">
                  <svg class="w-4 h-4 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                  </svg>
                </div>
                <div class="flex-1 min-w-0">
                  <h4 class="text-sm font-medium text-foreground truncate"><%= post.title %></h4>
                  <p class="text-xs text-muted-foreground truncate"><%= post.content.truncate(60) %></p>
                </div>
                <% case post.status %>
                <% when "published" %>
                  <span class="px-2 py-0.5 bg-green-50 text-green-700 text-xs font-medium rounded">Опубликован</span>
                <% when "scheduled" %>
                  <span class="px-2 py-0.5 bg-blue-50 text-blue-700 text-xs font-medium rounded">Запланирован</span>
                <% when "draft" %>
                  <span class="px-2 py-0.5 bg-muted text-muted-foreground text-xs font-medium rounded">Черновик</span>
                <% when "failed" %>
                  <span class="px-2 py-0.5 bg-red-50 text-red-700 text-xs font-medium rounded">Ошибка</span>
                <% end %>
              <% end %>
            <% end %>
          </div>
        <% else %>
          <div class="p-8 text-center">
            <p class="text-xs text-muted-foreground mb-3">Нет постов</p>
            <%= link_to new_project_post_path(@project), class: "text-xs font-medium text-muted-foreground hover:text-foreground transition-colors" do %>
              Создать первый пост →
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-4">
      <!-- Stats -->
      <div class="bg-card border border-border rounded-lg">
        <div class="p-4 border-b border-border">
          <h3 class="text-xs font-semibold text-foreground">Статистика</h3>
        </div>
        <div class="p-4 space-y-3 text-xs">
          <div class="flex items-center justify-between">
            <span class="text-muted-foreground">Всего постов</span>
            <span class="font-medium text-foreground"><%= @project.posts.count %></span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-muted-foreground">Опубликовано</span>
            <span class="font-medium text-green-600"><%= @project.posts.published.count %></span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-muted-foreground">Запланировано</span>
            <span class="font-medium text-blue-600"><%= @project.posts.scheduled.count %></span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-muted-foreground">Черновики</span>
            <span class="font-medium text-muted-foreground"><%= @project.posts.drafts.count %></span>
          </div>
        </div>
      </div>

      <!-- Actions -->
      <div class="bg-card border border-border rounded-lg">
        <div class="p-4 border-b border-border">
          <h3 class="text-xs font-semibold text-foreground">Действия</h3>
        </div>
        <div class="p-4 space-y-2">
          <% if @project.archived? %>
            <%= button_to activate_project_path(@project), method: :post, class: "w-full h-9 text-xs font-medium text-green-700 hover:bg-green-50 rounded-md transition-colors text-left px-2" do %>
              Активировать проект
            <% end %>
          <% else %>
            <%= button_to archive_project_path(@project), method: :post, class: "w-full h-9 text-xs font-medium text-muted-foreground hover:bg-accent rounded-md transition-colors text-left px-2" do %>
              Архивировать
            <% end %>
          <% end %>
          
          <%= button_to project_path(@project), method: :delete, data: { turbo_confirm: "Вы уверены? Это действие нельзя отменить." }, class: "w-full h-9 text-xs font-medium text-red-600 hover:bg-red-50 rounded-md transition-colors text-left px-2" do %>
            Удалить проект
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
