<div class="min-h-screen bg-background">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex flex-col lg:flex-row gap-8">
      <!-- Sidebar -->
      <%= render 'shared/settings_sidebar' %>

      <!-- Main Content -->
      <div class="flex-1 min-w-0 w-full">
        <!-- Header -->
        <div class="mb-8">
          <h1 class="text-3xl font-bold text-foreground mb-2">Тарифные планы</h1>
          <p class="text-sm text-muted-foreground">Выберите подходящий тариф для вашего бизнеса</p>
        </div>

    <!-- Current Subscription Status -->
    <% if @current_subscription %>
      <div class="mb-8 bg-card border border-border rounded-lg p-6">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-lg font-semibold text-foreground mb-2">Текущая подписка</h3>
            <div class="flex items-center gap-4">
              <span class="inline-flex items-center rounded-md bg-primary/10 px-3 py-1 text-sm font-medium text-primary">
                <%= @current_subscription.plan.titleize %>
              </span>
              <% if @current_subscription.active? %>
                <span class="inline-flex items-center rounded-md bg-green-500/10 px-2.5 py-0.5 text-xs font-medium text-green-700">
                  Активна
                </span>
              <% else %>
                <span class="inline-flex items-center rounded-md bg-red-500/10 px-2.5 py-0.5 text-xs font-medium text-red-700">
                  <%= @current_subscription.status.titleize %>
                </span>
              <% end %>
            </div>
          </div>
          <% if @current_subscription.current_period_end %>
            <div class="text-sm text-muted-foreground">
              Продлится до: <%= @current_subscription.current_period_end.strftime("%d.%m.%Y") %>
            </div>
          <% end %>
        </div>

        <!-- Usage Stats -->
        <div class="mt-6 grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="bg-background rounded-lg p-4 border border-border">
            <div class="text-sm text-muted-foreground mb-1">AI генерации</div>
            <div class="text-2xl font-semibold text-foreground">
              <%= @current_subscription.usage_for(:ai_generations_per_month) %> /
              <span class="text-lg text-muted-foreground">
                <%= @current_subscription.limit_for(:ai_generations_per_month) == Float::INFINITY ? '∞' : @current_subscription.limit_for(:ai_generations_per_month) %>
              </span>
            </div>
          </div>
          <div class="bg-background rounded-lg p-4 border border-border">
            <div class="text-sm text-muted-foreground mb-1">Проекты</div>
            <div class="text-2xl font-semibold text-foreground">
              <%= current_user.projects.count %> /
              <span class="text-lg text-muted-foreground">
                <%= @current_subscription.limit_for(:projects) == Float::INFINITY ? '∞' : @current_subscription.limit_for(:projects) %>
              </span>
            </div>
          </div>
          <div class="bg-background rounded-lg p-4 border border-border">
            <div class="text-sm text-muted-foreground mb-1">Боты</div>
            <div class="text-2xl font-semibold text-foreground">
              <%= current_user.projects.joins(:telegram_bots).count %> /
              <span class="text-lg text-muted-foreground">
                <%= @current_subscription.limit_for(:bots) == Float::INFINITY ? '∞' : @current_subscription.limit_for(:bots) %>
              </span>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Pricing Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <% [:free, :starter, :pro, :business].each do |plan| %>
        <% plan_limits = @plans[plan] %>
        <% price = @prices[plan] %>
        <% is_current = @current_subscription&.plan == plan.to_s %>

        <div class="relative bg-card border <%= is_current ? 'border-primary ring-2 ring-primary' : 'border-border' %> rounded-lg p-6 flex flex-col h-full">
          <% if is_current %>
            <div class="absolute -top-3 left-1/2 -translate-x-1/2">
              <span class="inline-flex items-center rounded-full bg-primary px-3 py-1 text-xs font-medium text-primary-foreground">
                Текущий план
              </span>
            </div>
          <% end %>

          <!-- Plan Header -->
          <div class="mb-6">
            <h3 class="text-xl font-bold text-foreground mb-2"><%= plan.to_s.titleize %></h3>
            <div class="flex items-baseline">
              <span class="text-4xl font-extrabold text-foreground"><%= price %></span>
              <span class="ml-2 text-muted-foreground">₽/мес</span>
            </div>
          </div>

          <!-- Features List -->
          <ul class="space-y-3 mb-8 flex-grow">
            <li class="flex items-start gap-2">
              <svg class="h-5 w-5 text-green-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="text-sm text-foreground">
                <%= plan_limits[:projects] == Float::INFINITY ? 'Безлимитные' : plan_limits[:projects] %>
                <%= plan_limits[:projects] == 1 ? 'проект' : 'проектов' %>
              </span>
            </li>
            <li class="flex items-start gap-2">
              <svg class="h-5 w-5 text-green-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="text-sm text-foreground">
                <%= plan_limits[:bots] == Float::INFINITY ? 'Безлимитные' : plan_limits[:bots] %>
                <%= plan_limits[:bots] == 1 ? 'бот' : 'ботов' %>
              </span>
            </li>
            <li class="flex items-start gap-2">
              <svg class="h-5 w-5 text-green-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="text-sm text-foreground">
                <%= plan_limits[:posts_per_month] == Float::INFINITY ? 'Безлимитные' : plan_limits[:posts_per_month] %>
                постов в месяц
              </span>
            </li>
            <li class="flex items-start gap-2">
              <svg class="h-5 w-5 text-green-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="text-sm text-foreground">
                <%= plan_limits[:ai_generations_per_month] == Float::INFINITY ? 'Безлимитные' : plan_limits[:ai_generations_per_month] %>
                AI генераций в месяц
              </span>
            </li>
            <% if plan_limits[:ai_image_generations_per_month] %>
              <li class="flex items-start gap-2">
                <svg class="h-5 w-5 text-green-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-sm text-foreground">
                  <%= plan_limits[:ai_image_generations_per_month] %> изображений AI в месяц
                </span>
              </li>
            <% end %>
            <li class="flex items-start gap-2">
              <svg class="h-5 w-5 text-green-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="text-sm text-foreground">
                Аналитика: <%= plan_limits[:analytics].to_s.titleize %>
              </span>
            </li>
          </ul>

          <!-- Action Button -->
          <% if is_current %>
            <% if plan != :free %>
              <%= button_to 'Отменить подписку', cancel_subscriptions_path, method: :post,
                  class: "w-full inline-flex justify-center items-center rounded-md border border-border bg-background px-4 py-2 text-sm font-medium text-foreground hover:bg-accent transition-colors",
                  data: { confirm: 'Вы уверены? Подписка будет отменена.' } %>
            <% else %>
              <button disabled class="w-full inline-flex justify-center items-center rounded-md bg-muted px-4 py-2 text-sm font-medium text-muted-foreground cursor-not-allowed">
                Текущий план
              </button>
            <% end %>
          <% elsif plan == :free %>
            <%= button_to 'Перейти на Free', downgrade_subscriptions_path, method: :post,
                class: "w-full inline-flex justify-center items-center rounded-md border border-border bg-background px-4 py-2 text-sm font-medium text-foreground hover:bg-accent transition-colors" %>
          <% else %>
            <%= button_to 'Перейти на этот план', upgrade_subscriptions_path(plan: plan), method: :post,
                class: "w-full inline-flex justify-center items-center rounded-md bg-primary px-4 py-2 text-sm font-semibold text-primary-foreground hover:bg-primary/90 transition-colors" %>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Payment History -->
    <% if current_user.payments.any? %>
      <div class="mt-12">
        <h2 class="text-2xl font-bold text-foreground mb-6">История платежей</h2>
        <div class="bg-card border border-border rounded-lg overflow-hidden">
          <table class="min-w-full divide-y divide-border">
            <thead class="bg-muted/50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider">Дата</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider">План</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider">Сумма</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-muted-foreground uppercase tracking-wider">Статус</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-border">
              <% current_user.payments.recent.limit(10).each do |payment| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-foreground">
                    <%= payment.created_at.strftime("%d.%m.%Y %H:%M") %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-foreground">
                    <%= payment.metadata['plan']&.titleize || 'N/A' %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-foreground">
                    <%= number_to_currency(payment.amount, unit: '₽', separator: ',', delimiter: ' ', format: '%n %u') %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% case payment.status %>
                    <% when 'completed' %>
                      <span class="inline-flex items-center rounded-md bg-green-500/10 px-2.5 py-0.5 text-xs font-medium text-green-700">
                        Завершен
                      </span>
                    <% when 'pending', 'processing' %>
                      <span class="inline-flex items-center rounded-md bg-yellow-500/10 px-2.5 py-0.5 text-xs font-medium text-yellow-700">
                        В обработке
                      </span>
                    <% when 'failed' %>
                      <span class="inline-flex items-center rounded-md bg-red-500/10 px-2.5 py-0.5 text-xs font-medium text-red-700">
                        Ошибка
                      </span>
                    <% else %>
                      <span class="inline-flex items-center rounded-md bg-gray-500/10 px-2.5 py-0.5 text-xs font-medium text-gray-700">
                        <%= payment.status.titleize %>
                      </span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>
      </div>
    </div>
  </div>
</div>
