<div class="max-w-2xl mx-auto space-y-6">
  <div>
    <h2 class="text-2xl font-bold text-zinc-900 dark:text-zinc-50">Новая пригласительная ссылка</h2>
    <p class="mt-1 text-sm text-zinc-500 dark:text-zinc-400">
      Создайте уникальную ссылку для отслеживания источников трафика
    </p>
  </div>

  <%= form_with model: @invite_link, url: project_telegram_bot_invite_links_path(@project, @telegram_bot), class: "space-y-6" do |f| %>
    <div class="bg-white dark:bg-zinc-950 border border-zinc-200 dark:border-zinc-800 rounded-lg p-6 space-y-6">
      <div>
        <%= f.label :name, 'Название ссылки', class: "block text-sm font-medium text-zinc-700 dark:text-zinc-300 mb-1" %>
        <%= f.text_field :name, class: "w-full px-3 py-2 border border-zinc-300 dark:border-zinc-700 rounded-lg bg-white dark:bg-zinc-900 text-zinc-900 dark:text-zinc-50", placeholder: "Например: Instagram Bio" %>
        <p class="mt-1 text-xs text-zinc-500 dark:text-zinc-400">Для вашего удобства, не отображается пользователям</p>
      </div>

      <div>
        <%= f.label :source, 'Источник трафика', class: "block text-sm font-medium text-zinc-700 dark:text-zinc-300 mb-1" %>
        <%= f.select :source, [['Instagram', 'instagram'], ['VK', 'vk'], ['YouTube', 'youtube'], ['TikTok', 'tiktok'], ['Twitter/X', 'twitter'], ['Facebook', 'facebook'], ['Реклама', 'ads'], ['Другое', 'other']], { include_blank: 'Выберите источник' }, class: "w-full px-3 py-2 border border-zinc-300 dark:border-zinc-700 rounded-lg bg-white dark:bg-zinc-900 text-zinc-900 dark:text-zinc-50" %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= f.label :member_limit, 'Лимит вступлений', class: "block text-sm font-medium text-zinc-700 dark:text-zinc-300 mb-1" %>
          <%= f.number_field :member_limit, min: 1, class: "w-full px-3 py-2 border border-zinc-300 dark:border-zinc-700 rounded-lg bg-white dark:bg-zinc-900 text-zinc-900 dark:text-zinc-50", placeholder: "Без лимита" %>
          <p class="mt-1 text-xs text-zinc-500 dark:text-zinc-400">Оставьте пустым для неограниченного количества</p>
        </div>

        <div>
          <%= f.label :expire_date, 'Срок действия', class: "block text-sm font-medium text-zinc-700 dark:text-zinc-300 mb-1" %>
          <%= f.datetime_local_field :expire_date, class: "w-full px-3 py-2 border border-zinc-300 dark:border-zinc-700 rounded-lg bg-white dark:bg-zinc-900 text-zinc-900 dark:text-zinc-50" %>
          <p class="mt-1 text-xs text-zinc-500 dark:text-zinc-400">Оставьте пустым для бессрочной ссылки</p>
        </div>
      </div>

      <div class="flex items-center gap-2">
        <%= f.check_box :creates_join_request, class: "w-4 h-4 rounded border-zinc-300 dark:border-zinc-700 text-primary-600" %>
        <%= f.label :creates_join_request, 'Требовать одобрение заявки', class: "text-sm text-zinc-700 dark:text-zinc-300" %>
      </div>
    </div>

    <div class="flex items-center gap-4">
      <%= f.submit 'Создать ссылку', class: "px-6 py-2 bg-primary-600 text-white rounded-lg text-sm font-medium hover:bg-primary-700 transition-colors cursor-pointer" %>
      <%= link_to 'Отмена', project_telegram_bot_invite_links_path(@project, @telegram_bot), class: "px-6 py-2 border border-zinc-300 dark:border-zinc-700 text-zinc-700 dark:text-zinc-300 rounded-lg text-sm font-medium hover:bg-zinc-50 dark:hover:bg-zinc-900 transition-colors" %>
    </div>
  <% end %>
</div>
